@model estacionamientos.Models.ViewModels.CreateConductorVM
@{
    ViewData["Title"] = "Crear Conductor";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
<hr />

@if (TempData["Msg"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<div class="row">
  <div class="col-md-6">
    <form asp-action="CreateConductor" method="post">
      @Html.AntiForgeryToken()
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="mb-3">
        <label asp-for="UsuNyA" class="form-label"></label>
        <input asp-for="UsuNyA" class="form-control" />
        <span asp-validation-for="UsuNyA" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="UsuEmail" class="form-label"></label>
        <input asp-for="UsuEmail" class="form-control" />
        <span asp-validation-for="UsuEmail" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="UsuPswd" class="form-label"></label>
        <input asp-for="UsuPswd" type="password" class="form-control" />
        <span asp-validation-for="UsuPswd" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="UsuNumTel" class="form-label"></label>
        <input asp-for="UsuNumTel" class="form-control" />
        <span asp-validation-for="UsuNumTel" class="text-danger"></span>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Crear</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
