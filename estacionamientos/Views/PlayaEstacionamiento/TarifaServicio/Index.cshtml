@model estacionamientos.Models.ViewModels.TarifasIndexVM
@{
    ViewData["Title"] = "Tarifas de servicios";

    string LabelFiltro(string v) => v?.ToLower() switch {
        "servicio" => "Servicio",
        "clase" => "Clase vehículo",
        "fechas" => "Rango de fechas",
        "monto" => "Monto",
        _ => "Todos"
    };

    bool showAddButton = (!string.IsNullOrWhiteSpace(Model.Q) && Model.FilterBy != "fechas") ||
                         (Model.FilterBy == "fechas" && !string.IsNullOrWhiteSpace(Model.SelectedOption));
}
<div class="container">
    <!-- Título -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="display-6 fw-semibold">@ViewData["Title"]</h1>
                <h5 class="text-muted">@ViewBag.PlayaNombre</h5>
            </div>
            @if (ViewBag.PlayaNombre != null)
            {
                <a asp-controller="PlayaEstacionamiento" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Volver
                </a>
            }
        </div>
    </div>
    <!-- Formulario de búsqueda/filtros -->
    <form method="get" id="searchForm" class="row g-2 align-items-center">
        <input type="hidden" name="plyID" value="@ViewBag.PlyID" />

        <!-- Campo de texto -->
        <div class="col-md-5 @(Model.FilterBy == "fechas" ? "d-none" : "")" id="qWrapper">
            <input name="Q" id="qInput" value="@Model.Q" class="form-control" placeholder="Buscar tarifas..." />
        </div>

        <!-- Rango de fechas -->
        <div class="col-md-5 @(Model.FilterBy == "fechas" ? "" : "d-none")" id="fechasWrapper">
            <div class="row g-2">
                <div class="col-6">
                    <input name="SelectedOption" id="fechaDesde" type="date" class="form-control" 
                           value="@Model.SelectedOption" placeholder="Desde..." />
                </div>
                <div class="col-6">
                    <input name="FechaHasta" id="fechaHasta" type="date" class="form-control" 
                           placeholder="Hasta..." />
                </div>
            </div>
        </div>

        <!-- Botón Filtrar -->
        <div class="col-auto">
            <div class="btn-group">
                <input type="hidden" name="FilterBy" id="filterBy" value="@Model.FilterBy" />
                <button type="button" class="btn btn-outline-secondary dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false" id="filterBtn">
                    <i class="fa-solid fa-filter"></i> Filtrar: @LabelFiltro(Model.FilterBy)
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" data-value="todos">Todos</a></li>
                    <li><a class="dropdown-item" href="#" data-value="servicio">Servicio</a></li>
                    <li><a class="dropdown-item" href="#" data-value="clase">Clase vehículo</a></li>
                    <li><a class="dropdown-item" href="#" data-value="fechas">Rango de fechas</a></li>
                    <li><a class="dropdown-item" href="#" data-value="monto">Monto</a></li>
                </ul>
            </div>
        </div>

        <!-- Buscar + Limpiar -->
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary" title="Buscar">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <a id="btnLimpiar"
               class="btn btn-outline-secondary @(Model.HayFiltros ? "" : "d-none")"
               asp-action="Index"
               asp-route-plyID="@ViewBag.PlyID"
               title="Limpiar filtros">
                <i class="fa-regular fa-circle-xmark"></i>
            </a>
        </div>

        <!-- Botón Agregar Tarifa alineado a la derecha -->
        <div class="col-auto ms-auto">
            <a class="btn btn-primary"
            asp-action="Create"
            asp-route-plySel="@ViewBag.PlyID"      
            title="+ Nueva Tarifa">
        <i class="fa-solid fa-plus"></i> Agregar tarifa
            </a>

            <a asp-action="Historial" 
            asp-controller="TarifaServicio" 
            asp-route-plyID="@ViewBag.PlyID"
            class="btn btn-outline-secondary ms-2">
                <i class="fa-solid fa-clock-rotate-left"></i> Historial
            </a>

        </div>

        <!-- Botón Añadir filtro SIEMPRE (habilitado por JS) -->
        <div class="w-100"></div>
        <div class="col-md-5 mt-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="btnAddOne" disabled>
                Añadir filtro
            </button>
        </div>

        <!-- Inputs ocultos para preservar filtros acumulados -->
        @for (int i = 0; i < Model.Servicios.Count; i++)
        {
            <input type="hidden" name="Servicios[@i]" value="@Model.Servicios[i]" />
        }
        @for (int i = 0; i < Model.Clases.Count; i++)
        {
            <input type="hidden" name="Clases[@i]" value="@Model.Clases[i]" />
        }
        @for (int i = 0; i < Model.Todos.Count; i++)
        {
            <input type="hidden" name="Todos[@i]" value="@Model.Todos[i]" />
        }
        @for (int i = 0; i < Model.Montos.Count; i++)
        {
            <input type="hidden" name="Montos[@i]" value="@Model.Montos[i]" />
        }
        @for (int i = 0; i < Model.FechasDesde.Count; i++)
        {
            <input type="hidden" name="FechasDesde[@i]" value="@Model.FechasDesde[i]" />
        }
        @for (int i = 0; i < Model.FechasHasta.Count; i++)
        {
            <input type="hidden" name="FechasHasta[@i]" value="@Model.FechasHasta[i]" />
        }
    </form>

<!-- Modal: Tiempo de gracia -->
<div class="modal fade" id="tiempoGraciaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa-solid fa-stopwatch me-2"></i>Ajustar tiempo de gracia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info small mb-3">
                    <i class="fa-solid fa-info-circle me-1"></i>
                    El tiempo de gracia por defecto es <strong>cero</strong>. Si no se configura, no habrá período de gracia.
                </div>
                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="form-label">Valor</label>
                        <input type="number" min="0" class="form-control" id="graciaValor" />
                        <span class="text-danger small" id="errorValor" style="display: none;"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Unidad</label>
                        <select class="form-select" id="graciaUnidad">
                            <option value="">-- Seleccione --</option>
                            <option value="minutos">Minutos</option>
                            <option value="horas">Horas</option>
                            <option value="dias">Días</option>
                        </select>
                        <span class="text-danger small" id="errorUnidad" style="display: none;"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Descripción (opcional)</label>
                    <input type="text" class="form-control" id="graciaDesc" placeholder="Ej: aplica solo a abonos mensuales" />
                </div>
                <div class="alert alert-secondary small" id="graciaContexto"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarGracia">Guardar</button>
            </div>
        </div>
    </div>
 </div>

<script>
    (function(){
        // Tomar contexto actual de primera fila seleccionada o filtros activos
        const plyID = @ViewBag.PlyID ?? 0;

        // Función para limpiar errores
        function limpiarErrores() {
            document.getElementById('errorValor').style.display = 'none';
            document.getElementById('errorValor').textContent = '';
            document.getElementById('errorUnidad').style.display = 'none';
            document.getElementById('errorUnidad').textContent = '';
            document.getElementById('graciaValor').classList.remove('is-invalid');
            document.getElementById('graciaUnidad').classList.remove('is-invalid');
        }

        // Función para mostrar error en un campo
        function mostrarError(campoId, mensaje) {
            const errorEl = document.getElementById(`error${campoId}`);
            const inputEl = document.getElementById(campoId);
            if (errorEl && inputEl) {
                errorEl.textContent = mensaje;
                errorEl.style.display = 'block';
                inputEl.classList.add('is-invalid');
            }
        }

        // Apertura desde botón por fila (por servicio)
        document.addEventListener('click', async function(ev){
            const btn = ev.target.closest('.btn-gracia');
            if(!btn) return;
            limpiarErrores();
            const serID = parseInt(btn.getAttribute('data-serid'));
            const servName = btn.getAttribute('data-servname');
            contexto = { serID };
            document.getElementById('graciaContexto').textContent = `Configurando tiempo de gracia para ${servName}.`;
            await (async function cargarGraciaPorServicio(){
                const resp = await fetch(`/TarifaServicio/GetTiempoGraciaAbono?plyID=${plyID}&serID=${serID}`);
                const data = await resp.json();
                if(data.success){
                    document.getElementById('graciaValor').value = data.valor ?? '';
                    document.getElementById('graciaUnidad').value = data.unidad ?? '';
                    document.getElementById('graciaDesc').value = data.descripcion ?? '';
                } else {
                    document.getElementById('graciaValor').value = '';
                    document.getElementById('graciaUnidad').value = '';
                    document.getElementById('graciaDesc').value = '';
                }
            })();
            bootstrap.Modal.getOrCreateInstance(document.getElementById('tiempoGraciaModal')).show();
        });

        // Limpiar errores cuando el usuario modifique los campos
        document.getElementById('graciaValor')?.addEventListener('input', function() {
            limpiarErrores();
        });
        document.getElementById('graciaUnidad')?.addEventListener('change', function() {
            limpiarErrores();
        });

        async function cargarGracia(serID, clasVehID){
            const resp = await fetch(`/TarifaServicio/GetTiempoGracia?plyID=${plyID}&serID=${serID}&clasVehID=${clasVehID}`);
            const data = await resp.json();
            if(data.success){
                document.getElementById('graciaValor').value = data.valor ?? '';
                document.getElementById('graciaUnidad').value = data.unidad ?? '';
                document.getElementById('graciaDesc').value = data.descripcion ?? '';
            } else {
                document.getElementById('graciaValor').value = '';
                document.getElementById('graciaUnidad').value = '';
                document.getElementById('graciaDesc').value = '';
            }
        }

        let contexto = null;
        // Eliminado botón global

        document.getElementById('btnGuardarGracia')?.addEventListener('click', async function(){
            limpiarErrores();
            let hayErrores = false;

            if(!contexto){
                mostrarError('Unidad', 'No se pudo determinar el servicio.');
                return;
            }

            const valorInput = document.getElementById('graciaValor');
            const unidadSelect = document.getElementById('graciaUnidad');
            const valorStr = valorInput.value.trim();
            const unidad = unidadSelect.value.trim();

            // Validar valor
            let valor = null;
            if (valorStr) {
                valor = parseInt(valorStr);
                if (isNaN(valor) || valor < 0) {
                    mostrarError('Valor', 'El valor debe ser un número mayor o igual a 0.');
                    hayErrores = true;
                }
            }

            // Si hay valor, debe haber unidad
            if (valor !== null && valor > 0 && !unidad) {
                mostrarError('Unidad', 'Seleccione una unidad de tiempo.');
                hayErrores = true;
            }

            // Si hay unidad, debe haber valor mayor a 0
            if (unidad && (valor === null || valor <= 0)) {
                mostrarError('Valor', 'Ingrese un valor mayor a 0 cuando se selecciona una unidad.');
                hayErrores = true;
            }

            if (hayErrores) {
                return;
            }

            const body = {
                plyID: plyID,
                serID: contexto.serID,
                valor: valor,
                unidad: unidad || null,
                descripcion: document.getElementById('graciaDesc').value.trim() || null
            };

            try {
                const resp = await fetch('/TarifaServicio/SaveTiempoGraciaAbono', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(body)
                });
                const data = await resp.json();
                if(data.success){
                    bootstrap.Modal.getOrCreateInstance(document.getElementById('tiempoGraciaModal')).hide();
                } else {
                    mostrarError('Unidad', data.message || 'No se pudo guardar.');
                }
            } catch (error) {
                mostrarError('Unidad', 'Error de comunicación con el servidor.');
            }
        });
    })();
</script>

