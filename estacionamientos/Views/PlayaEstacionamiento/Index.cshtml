@{
    ViewData["Title"] = "Playas";
}

@model List<estacionamientos.Models.PlayaEstacionamiento>

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    @foreach (var playa in Model)
    {
        <div class="card mb-3 w-100">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title mb-1">@playa.PlyNom</h5>
                    <p class="mb-0"><strong>ID:</strong> @playa.PlyID</p>
                    <p class="mb-0"><strong>Provincia:</strong> @playa.PlyProv</p>
                    <p class="mb-0"><strong>Ciudad:</strong> @playa.PlyCiu</p>
                    <p class="mb-0"><strong>Dirección:</strong> @playa.PlyDir</p>
                </div>
                <div>
                    <a class="btn btn-primary btn-sm me-2" 
                       asp-action="ConfigurarPlazas" 
                       asp-controller="PlazaEstacionamiento"
                       asp-route-plyID="@playa.PlyID">
                        Configurar Plazas
                    </a>
                    <a class="btn btn-secondary btn-sm" 
                       asp-action="Index" 
                       asp-controller="AceptaMetodoPago"
                       asp-route-plyID="@playa.PlyID">
                        Métodos de Pago
                    </a>
                </div>
            </div>
        </div>
    }
</div>
