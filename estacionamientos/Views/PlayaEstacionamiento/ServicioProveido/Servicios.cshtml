@model estacionamientos.ViewModels.ServiciosViewModel

<h2>Servicios disponibles para @Model.PlayaNom</h2>

<form asp-action="AsignarServicios" method="post">
    <input type="hidden" asp-for="PlayaID" />

    <div class="row">
        @foreach (var servicio in Model.ServiciosDisponibles)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@servicio.SerNom</h5>
                        <p class="card-text">@servicio.SerDesc</p>
                        <label>
                            <input type="checkbox" name="ServiciosAsignados" value="@servicio.SerID" 
                                   @(Model.ServiciosAsignados.Contains(servicio.SerID) ? "checked" : "") />
                            <span>@(Model.ServiciosAsignados.Contains(servicio.SerID) ? "Desasignar" : "Asignar")</span>
                        </label>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Botones de acciÃ³n -->
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index", "PlayaEstacionamiento")" class="btn btn-secondary">Cancelar</a> 
</form>
