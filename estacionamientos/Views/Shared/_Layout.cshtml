@using estacionamientos.Data
@using System.Security.Claims
@inject AppDbContext _ctx

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    string? playaActiva = null;

    if (userId != null && User.IsInRole("Playero"))
    {
        var turno = _ctx.Turnos
            .Where(t => t.PlaNU.ToString() == userId && t.TurFyhFin == null)
            .FirstOrDefault();

        if (turno != null)
        {
            playaActiva = _ctx.Playas
                .Where(p => p.PlyID == turno.PlyID)
                .Select(p => p.PlyNom)
                .FirstOrDefault();
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Estacionamientos</title>
    <link rel="icon" type="image/x-icon" href="~/favicon-2.ico" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/estacionamientos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center fw-bold fs-4" 
               asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-cone-striped text-warning me-2"></i> NetParking
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <!-- Navegación izquierda -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                    </li>

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Schema" asp-action="Index">Schema</a>
                        </li>
                    }

                    @if (User.IsInRole("Playero"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Turno" asp-action="Index">
                                Mis turnos
                            </a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-controller="Playero" asp-action="Plazas">
                                Plazas
                            </a>
                        </li>

                    }
                    

                    @if (User.IsInRole("Duenio"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PlayaEstacionamiento" asp-action="Index">Playas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Playero" asp-action="Index">Playeros</a>
                        </li>
                    }
                </ul>

                <!-- Navegación derecha -->
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @* Badge de playa activa si corresponde *@
                        @if (!string.IsNullOrEmpty(playaActiva))
                        {
<li class="nav-item me-3">
    <span class="badge rounded-pill bg-light text-dark shadow-sm px-3 py-2">
        <i class="bi bi-geo-alt text-primary me-1"></i>
        Estás en:  <strong class="text-primary">@playaActiva</strong>
    </span>
</li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="userMenu" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                @User.Identity!.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><h6 class="dropdown-header">@User.Identity!.Name</h6></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-dark" href="#"
                                       onclick="document.getElementById('logoutForm').submit(); return false;">
                                        Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Form oculto de logout -->
                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
                            @Html.AntiForgeryToken()
                        </form>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - NetParking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.alert[data-autohide]').forEach(el => {
            const ms = parseInt(el.getAttribute('data-autohide'), 10) || 3000;
            setTimeout(() => {
                const inst = bootstrap.Alert.getOrCreateInstance(el);
                inst.close();
            }, ms);
        });
    });
</script>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
@RenderSection("AceptaMetodoPagoScript", required: false)
</body>
</html>
