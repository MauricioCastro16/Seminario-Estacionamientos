@model estacionamientos.Models.ServicioExtraRealizado

@{
    ViewData["Title"] = "Detalles del Servicio Extra";
}

<h2>Detalles del Servicio Extra</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Playa</dt>
            <dd class="col-sm-9">@Model.PlyID</dd>

            <dt class="col-sm-3">Servicio</dt>
            <dd class="col-sm-9">@Model.ServicioProveido?.Servicio?.SerNom ?? "-"</dd>

            <dt class="col-sm-3">Patente</dt>
            <dd class="col-sm-9">@Model.VehPtnt</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.ServExEstado</dd>

            <dt class="col-sm-3">Inicio (ServExFyHIni)</dt>
            <dd class="col-sm-9">@Model.ServExFyHIni.ToLocalTime().ToString("g")</dd>

            <dt class="col-sm-3">Fin (ServExFyHFin)</dt>
            <dd class="col-sm-9">@(Model.ServExFyHFin.HasValue ? Model.ServExFyHFin.Value.ToLocalTime().ToString("g") : "(no finalizado)")</dd>

            <dt class="col-sm-3">Comentario</dt>
            <dd class="col-sm-9">@Model.ServExComp</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
