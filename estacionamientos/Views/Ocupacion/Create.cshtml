@model estacionamientos.Models.Ocupacion

@{
    ViewData["Title"] = "Ingresar Veh√≠culo";
}

<h2 class="mb-4">Ingresar Veh√≠culo</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label class="form-label">Playa</label>
        <input type="text" class="form-control w-50" value="@ViewBag.PlayaNombre" disabled />
        <input type="hidden" asp-for="PlyID" value="@Model.PlyID" />

    </div>

    <div class="form-group mb-3">
        <label asp-for="VehPtnt" class="form-label"></label>
        <input asp-for="VehPtnt" class="form-control w-50" maxlength="10" placeholder="Ej: ABC123"
            oninput="this.value = this.value.toUpperCase().replace(/\s/g,'');" />
        <span asp-validation-for="VehPtnt" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label for="ClasVehID" class="form-label">Clasificaci√≥n del veh√≠culo</label>
        <select id="ClasVehID" name="ClasVehID" asp-items="ViewBag.Clasificaciones" class="form-select w-50">
            <option value="">-- Seleccione clasificaci√≥n --</option>
        </select>
        <!-- ‚ö†Ô∏è NO uses asp-validation-for, porque el modelo Ocupacion no tiene esa propiedad -->
        <span class="text-danger">@ViewBag.ClasVehError</span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">¬øPlaza techada?</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="techada" value="true" id="techadaSi">
            <label class="form-check-label" for="techadaSi">S√≠</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="techada" value="false" id="techadaNo">
            <label class="form-check-label" for="techadaNo">No</label>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PlzNum" class="form-label"></label>
        <select asp-for="PlzNum" asp-items="ViewBag.PlzNum" class="form-select w-50">
            <option value="">-- Seleccionar plaza --</option>
        </select>
        <span asp-validation-for="PlzNum" class="text-danger"></span>
    </div>


    <input type="hidden" asp-for="OcufFyhIni" value="@DateTime.Now" />

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle"></i> Confirmar Ingreso
    </button>
</form>


@section Scripts {
<script>
    document.getElementById("ClasVehID").addEventListener("change", loadPlazas);
    document.querySelectorAll("input[name='techada']").forEach(r => {
        r.addEventListener("change", loadPlazas);
    });

    function loadPlazas() {
        const clasVehID = document.getElementById("ClasVehID").value;
        const plyID = document.querySelector("input[name='PlyID']").value;
        const techadaSelected = document.querySelector("input[name='techada']:checked");
        const techada = techadaSelected ? techadaSelected.value : "all"; // üëà si no eligi√≥ nada ‚Üí "all"

        if (!clasVehID || !plyID) return;

        fetch(`/Ocupacion/GetPlazasDisponibles?plyID=${plyID}&clasVehID=${clasVehID}&techada=${techada}`)
            .then(r => r.json())
            .then(data => {
                const plzSelect = document.getElementById("PlzNum");
                plzSelect.innerHTML = '<option value="">-- Seleccione plaza --</option>';

                if (data.length === 0) return;

                // üëâ Si todas son an√≥nimas ‚Üí autoseleccionar la primera
                const todasAnonimas = data.every(p => !p.nombre || p.nombre.trim() === "");
                if (todasAnonimas) {
                    plzSelect.innerHTML =
                        `<option value="${data[0].plzNum}" selected>Plaza ${data[0].plzNum}</option>`;
                } else {
                    data.forEach(plaza => {
                        const label = plaza.nombre && plaza.nombre.trim() !== ""
                            ? plaza.nombre
                            : `Plaza ${plaza.plzNum}`;
                        const opt = document.createElement("option");
                        opt.value = plaza.plzNum;
                        opt.textContent = label;
                        plzSelect.appendChild(opt);
                    });
                }
            });
    }
</script>
}
