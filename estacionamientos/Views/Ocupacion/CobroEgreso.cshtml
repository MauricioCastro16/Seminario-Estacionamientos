@model estacionamientos.Models.ViewModels.CobroEgresoVM
@using System

@{
    ViewData["Title"] = "Cobro de Egreso";
    
    // Helper para convertir fechas UTC a zona horaria de Córdoba
    DateTime ToCba(DateTime dt)
    {
        if (dt.Kind == DateTimeKind.Unspecified)
            dt = DateTime.SpecifyKind(dt, DateTimeKind.Utc);
        if (dt.Kind == DateTimeKind.Local)
            dt = dt.ToUniversalTime();

        try
        {
            var tz = TimeZoneInfo.FindSystemTimeZoneById("America/Argentina/Cordoba");
            return TimeZoneInfo.ConvertTimeFromUtc(dt, tz);
        }
        catch
        {
            // Fallback si la zona horaria no está disponible
            return dt.ToLocalTime();
        }
    }
}

<div class="container my-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error:</strong>
            <ul class="mb-0 mt-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-car me-2"></i> Egreso - Vehículo @Model.VehPtnt
            </h4>
        </div>

        <div class="card-body">
            <!-- Información del vehículo y ocupación -->
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="fas fa-info-circle me-1"></i> Información
                    </h6>
                    <table class="table table-sm align-middle">
                        <tbody>
                            <tr>
                                <th>Clasificación:</th>
                                <td>@Model.ClasVehTipo</td>
                            </tr>
                            <tr>
                                <th>Playa:</th>
                                <td>@Model.PlayaNombre</td>
                            </tr>
                            <tr>
                                <th>Plaza:</th>
                                <td>@Model.PlzNum</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-6">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="fas fa-clock me-1"></i> Tiempo de ocupación
                    </h6>
                    <table class="table table-sm align-middle">
                        <tbody>
                            <tr>
                                <th class="w-40">Ingreso:</th>
                                <td>
                                    @if (Model.OcufFyhIni != DateTime.MinValue)
                                    {
                                        @ToCba(Model.OcufFyhIni).ToString("dd/MM/yyyy HH:mm")
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Egreso:</th>
                                <td>
                                    @if (Model.OcufFyhFin != DateTime.MinValue)
                                    {
                                        @ToCba(Model.OcufFyhFin).ToString("dd/MM/yyyy HH:mm")
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Duración:</th>
                                <td>
                                    @Model.HorasOcupacion h @(Model.MinutosOcupacion % 60) min
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.EsAbonado)
            {
                <div class="alert alert-info text-center d-flex justify-content-center align-items-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <div>Este vehículo pertenece a un abono activo. @(Model.TotalCobro > 0 ? "Solo se cobrarán los servicios extras." : "Sin costo de egreso.")</div>
                </div>
            }

            @if (Model.TieneAbonoVencido && !string.IsNullOrEmpty(Model.MensajeAbono))
            {
                <div class="alert alert-info d-flex align-items-start" role="alert">
                    <i class="fas fa-info-circle me-2 mt-1"></i>
                    <div>
                        <strong>Información sobre el abono:</strong>
                        <p class="mb-0">@Model.MensajeAbono</p>
                        @if (Model.MontoNoCobradoPorAbono > 0)
                        {
                            <p class="mb-0 mt-2">
                                <strong>Monto no cobrado debido al abono:</strong> 
                                <span class="text-success">$@Model.MontoNoCobradoPorAbono.ToString("F2")</span>
                            </p>
                        }
                    </div>
                </div>
            }

            @if (!Model.EsAbonado || Model.ServiciosAplicables.Any())
            {
                <!-- Cálculo de tarifas -->
                <div class="mb-4">
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="fas fa-receipt me-1"></i> Cálculo de Tarifas
                    </h6>

                    @if (Model.ServiciosAplicables.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Servicio</th>
                                        <th class="text-end">Tarifa</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var servicio in Model.ServiciosAplicables)
                                    {
                                        <tr>
                                            <td>
                                                @servicio.SerNom
                                            </td>
                                            <td class="text-end">$@servicio.TarifaVigente.ToString("F2")</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@servicio.Cantidad</span>
                                            </td>
                                            <td class="text-end fw-bold">$@servicio.Subtotal.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    @if (Model.MontoNoCobradoPorAbono > 0)
                                    {
                                        <tr>
                                            <td colspan="3" class="text-end text-muted">
                                                <small>Monto no cobrado (cubierto por abono):</small>
                                            </td>
                                            <td class="text-end text-muted">
                                                <small>-$@Model.MontoNoCobradoPorAbono.ToString("F2")</small>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <th colspan="3" class="text-end">TOTAL A COBRAR:</th>
                                        <th class="text-end text-success fs-5">
                                            $@Model.TotalCobro.ToString("F2")
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            No se encontraron tarifas aplicables.
                        </div>
                    }
                </div>
            }

            <!-- Formulario de pago -->
            <form asp-action="ConfirmarEgreso" method="post">
                @Html.HiddenFor(m => m.PlyID)
                @Html.HiddenFor(m => m.PlzNum)
                @Html.HiddenFor(m => m.VehPtnt)
                @Html.HiddenFor(m => m.OcufFyhIni)
                @Html.HiddenFor(m => m.OcufFyhFin)
                @Html.HiddenFor(m => m.TotalCobro)
                @Html.HiddenFor(m => m.EsAbonado)

                @if (Model.TotalCobro > 0)
                {
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label asp-for="MepID" class="form-label fw-bold">
                                <i class="fas fa-credit-card me-1"></i> Método de pago
                            </label>
                            <select asp-for="MepID" class="form-select" data-val="true" data-val-required="* Seleccione un método de pago">
                                <option value="">Seleccione...</option>
                                @foreach (var metodo in Model.MetodosPagoDisponibles)
                                {
                                    <option value="@metodo.MepID">@metodo.MepNom</option>
                                }
                            </select>
                            <span asp-validation-for="MepID" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" 
                            class="btn btn-primary px-4" 
                            @((Model.EsAbonado || Model.TotalCobro > 0) ? "" : "disabled")>
                        <i class="fas fa-check me-1"></i> Confirmar egreso
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Configurar mensajes de validación en español para jQuery Validation
        $.validator.setDefaults({
            messages: {
                required: "* Este campo es obligatorio",
                remote: "Por favor corrija este campo",
                email: "Por favor ingrese un correo electrónico válido",
                url: "Por favor ingrese una URL válida",
                date: "Por favor ingrese una fecha válida",
                dateISO: "Por favor ingrese una fecha válida (ISO)",
                number: "Por favor ingrese un número válido",
                digits: "Por favor ingrese solo dígitos",
                equalTo: "Por favor ingrese el mismo valor nuevamente",
                maxlength: $.validator.format("Por favor no ingrese más de {0} caracteres"),
                minlength: $.validator.format("Por favor ingrese al menos {0} caracteres"),
                rangelength: $.validator.format("Por favor ingrese un valor entre {0} y {1} caracteres"),
                range: $.validator.format("Por favor ingrese un valor entre {0} y {1}"),
                max: $.validator.format("Por favor ingrese un valor menor o igual a {0}"),
                min: $.validator.format("Por favor ingrese un valor mayor o igual a {0}")
            }
        });
    </script>
}
