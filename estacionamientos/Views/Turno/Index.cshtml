@model IEnumerable<estacionamientos.Models.Turno>
@using System

@{
    ViewData["Title"] = "Gestionar turno";
    var esPlayero = User.IsInRole("Playero");
    var abierto = ViewBag.TurnoAbierto as estacionamientos.Models.Turno;

    DateTime ToCba(DateTime dt)
    {
        if (dt.Kind == DateTimeKind.Unspecified)
            dt = DateTime.SpecifyKind(dt, DateTimeKind.Utc);
        if (dt.Kind == DateTimeKind.Local)
            dt = dt.ToUniversalTime();

        var tz = TimeZoneInfo.FindSystemTimeZoneById("America/Argentina/Cordoba");
        return TimeZoneInfo.ConvertTimeFromUtc(dt, tz);
    }

    string Fmt(DateTime? dt)
        => dt.HasValue ? ToCba(dt.Value).ToString("dd/MM/yyyy HH:mm") : "-";
    decimal? TotalTurno(estacionamientos.Models.Turno t)
        {
            if (!t.TurApertCaja.HasValue && !t.TurCierrCaja.HasValue)
                return null;

            return (t.TurApertCaja ?? 0) + (t.TurCierrCaja ?? 0);
        }
}

<div class="container py-3">
    <h3 class="mb-3">Gestionar turno</h3>

    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err)) {
    <div class="alert alert-danger alert-dismissible fade show"
         role="alert" data-autohide="5000">
        <i class="bi bi-x-circle me-1"></i>@err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }
    @if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok)) {
    <div class="alert alert-success alert-dismissible fade show"
         role="alert" data-autohide="3000">
        <i class="bi bi-check-circle me-1"></i>@ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }

    @if (esPlayero)
    {
        if (abierto == null)
        {
            <div class="alert alert-secondary d-flex justify-content-between align-items-center">
                <div><i class="bi bi-exclamation-circle me-2"></i>Sin turno en curso.</div>
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-play-circle me-1"></i> Iniciar turno
                </a>
            </div>
        }
        else
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center">
                        <span class="dot-live"></span>
                            Turno en curso
                    </h5>
                    <div class="row gy-2">
                        <div class="col-md-4">
                            <div class="text-muted small">Playa</div>
                            <div class="fw-semibold">@abierto.Playa?.PlyNom (@abierto.PlyID)</div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-muted small">Inicio</div>
                            <div class="fw-semibold">@ToCba(abierto.TurFyhIni).ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <a class="btn btn-primary"
                           asp-action="Edit"
                           asp-route-plyID="@abierto.PlyID"
                           asp-route-plaNU="@abierto.PlaNU"
                           asp-route-turFyhIni="@abierto.TurFyhIni.ToString("o")">
                            <i class="bi bi-stop-circle me-1"></i> Finalizar turno
                        </a>
                        <a class="btn btn-outline-secondary"
                           asp-action="Details"
                           asp-route-plyID="@abierto.PlyID"
                           asp-route-plaNU="@abierto.PlaNU"
                           asp-route-turFyhIni="@abierto.TurFyhIni.ToString("o")">
                            <i class="bi bi-eye me-1" title="Ver detalles"></i>
                        </a>
                    </div>
                </div>
            </div>
        }

        <h5 class="mt-4 mb-2">Mis últimos turnos finalizados</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Playa</th>
                    <th>Fecha inicio</th>
                    <th>Hora inicio</th>
                    <th>Fecha fin</th>
                    <th>Hora fin</th>
                    <th>Total</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>

                <tbody>
                @foreach (var t in Model.Where(x => x.TurFyhFin != null))
                {
                    <tr>
                        <td>@t.Playa?.PlyNom (@t.PlyID)</td>
                        <td>@ToCba(t.TurFyhIni).ToString("dd/MM/yyyy")</td>
                        <td>@ToCba(t.TurFyhIni).ToString("HH:mm")</td>
                        <td>@(t.TurFyhFin.HasValue ? ToCba(t.TurFyhFin.Value).ToString("dd/MM/yyyy") : "-")</td>
                        <td>@(t.TurFyhFin.HasValue ? ToCba(t.TurFyhFin.Value).ToString("HH:mm") : "-")</td>


                        <td>@(TotalTurno(t)?.ToString("N2") ?? "-")</td>
                        <td class="text-center">
                            <a class="btn btn-outline-primary btn-sm me-1"
                            asp-action="Details"
                            asp-route-plyID="@t.PlyID"
                            asp-route-plaNU="@t.PlaNU"
                            asp-route-turFyhIni="@t.TurFyhIni.ToString("o")"
                            title="Ver">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- Otros roles: listado completo -->
        <div class="d-flex justify-content-end mb-2">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Iniciar turno
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Playa</th>
                    <th>Fecha inicio</th>
                    <th>Hora inicio</th>
                    <th>Fecha fin</th>
                    <th>Hora fin</th>
                    <th>Total</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
                <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Playa?.PlyNom (@t.PlyID)</td>
                        <td>@t.Playero?.UsuNyA (@t.PlaNU)</td>
                        <td>@ToCba(t.TurFyhIni).ToString("dd/MM/yyyy")</td>
                        <td>@ToCba(t.TurFyhIni).ToString("HH:mm")</td>
                        <td>@(t.TurFyhFin.HasValue ? ToCba(t.TurFyhFin.Value).ToString("dd/MM/yyyy") : "-")</td>
                        <td>@(t.TurFyhFin.HasValue ? ToCba(t.TurFyhFin.Value).ToString("HH:mm") : "-")</td>


                        <td>@(TotalTurno(t)?.ToString("N2") ?? "-")</td>

                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a class="btn btn-outline-secondary"
                                    asp-action="Details"
                                    asp-route-plyID="@t.PlyID"
                                    asp-route-plaNU="@t.PlaNU"
                                    asp-route-turFyhIni="@t.TurFyhIni.ToString("o")">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a class="btn btn-outline-primary"
                                    asp-action="Edit"
                                    asp-route-plyID="@t.PlyID"
                                    asp-route-plaNU="@t.PlaNU"
                                    asp-route-turFyhIni="@t.TurFyhIni.ToString("o")">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>



