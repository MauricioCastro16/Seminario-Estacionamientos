@model List<estacionamientos.Models.Vehiculo>
@using System.Text.Json

@{
    ViewData["Title"] = "Gestión - Historial de Visitas";
    var historialPorVehiculo = ViewBag.HistorialPorVehiculo as Dictionary<string, List<object>>;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow-lg border-0 rounded-4 historial-card">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0 fw-">
                        <i class="bi bi-clock-history me-2"></i>
                        Historial de Visitas a Playas de Estacionamiento
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Error:</strong> @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var vehiculo in Model)
                        {
                            var historial = historialPorVehiculo?.ContainsKey(vehiculo.VehPtnt) == true 
                                ? historialPorVehiculo[vehiculo.VehPtnt] 
                                : new List<object>();
                            
                            // Separar abonos del historial
                            var abonos = historial.Cast<dynamic>().Where(v => v.Tipo == "Abono").ToList();
                            var visitas = historial.Cast<dynamic>().Where(v => v.Tipo != "Abono").ToList();
                            
                            <div class="card mb-4 border shadow-sm rounded-4 vehiculo-card">
                                <div class="card-header border-0 rounded-top-4" style="background-color: #e9ecef;">
                                    <div>
                                        <h5 class="mb-2 mb-md-0 fw-bold text-dark">
                                            <i class="bi bi-car-front me-2 text-muted"></i>
                                            @vehiculo.VehPtnt
                                        </h5>
                                        <small class="text-muted d-block mt-1">
                                            <i class="bi bi-tag me-1"></i>@vehiculo.VehMarc - @(vehiculo.Clasificacion?.ClasVehTipo ?? "Sin clasificación")
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="card-body p-0">
                                    @if (abonos.Any() || visitas.Any())
                                    {
                                        <!-- Vista Desktop: Tablas -->
                                        <div class="d-none d-lg-block">
                                            <!-- Tabla de Abonos -->
                                            @if (abonos.Any())
                                            {
                                                <div class="table-responsive mt-3">
                                                    <h6 class="ms-3 mb-2 fw-semibold">
                                                        <i class="bi bi-credit-card me-2 text-primary"></i>Abonos
                                                    </h6>
                                                    <table class="table table-striped table-hover table-sm align-middle text-center shadow-sm">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th class="text-center">Playa</th>
                                                                <th class="text-center">Plaza</th>
                                                                <th class="text-center">Fecha Inicio</th>
                                                                <th class="text-center">Fecha Fin</th>
                                                                <th class="text-center">Estado</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (dynamic abono in abonos)
                                                            {
                                                                <tr>
                                                                    <td>@abono.PlayaNombre</td>
                                                                    <td>@abono.PlazaNumero</td>
                                                                    <td>@abono.FechaHoraIngreso.ToString("dd/MM/yyyy")</td>
                                                                    <td>
                                                                        @if (abono.FechaHoraEgreso != null)
                                                                        {
                                                                            @(((DateTime)abono.FechaHoraEgreso).ToString("dd/MM/yyyy"))
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">-</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (abono.EstadoAbono != null)
                                                                        {
                                                                            <span class="fw-bold @(abono.EstadoAbono == "Activo" ? "text-success" : 
                                                                                  abono.EstadoAbono == "Pendiente" ? "text-warning" : 
                                                                                  abono.EstadoAbono == "Finalizado" ? "text-secondary" : 
                                                                                  abono.EstadoAbono == "Cancelado" ? "text-danger" : "text-secondary")">
                                                                                @abono.EstadoAbono
                                                                            </span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                            
                                            <!-- Tabla de Visitas -->
                                            @if (visitas.Any())
                                            {
                                                <div class="table-responsive mt-3">
                                                    @if (abonos.Any())
                                                    {
                                                        <h6 class="ms-3 mb-2 fw-semibold mt-4">
                                                            <i class="bi bi-clock-history me-2 text-primary"></i>Visitas
                                                        </h6>
                                                    }
                                                    <table class="table table-striped table-hover table-sm align-middle text-center shadow-sm">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th class="text-center">Playa</th>
                                                                <th class="text-center">Fecha</th>
                                                                <th class="text-center">Servicio</th>
                                                                <th class="text-center">Monto</th>
                                                                <th class="text-center">Método Pago</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (dynamic visita in visitas)
                                                            {
                                                                <tr class="visita-row" data-servicios='@Html.Raw(Json.Serialize(visita.ServiciosNombres ?? new List<string>()))' style="cursor: @(visita.MostrarVarios == true ? "pointer" : "default");">
                                                                    <td>@visita.PlayaNombre</td>
                                                                    <td>@visita.FechaHoraIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                                                                    <td>
                                                                        @if (visita.MostrarVarios == true)
                                                                        {
                                                                            <div class="d-inline-block position-relative">
                                                                                <span class="toggle-varios-servicios text-dark" style="cursor: pointer;" data-servicios='@Html.Raw(Json.Serialize(visita.ServiciosNombres ?? new List<string>()))'>
                                                                                    Varios <i class="bi bi-caret-right-fill text-dark"></i>
                                                                                </span>
                                                                                <div class="varios-servicios-list bg-light border rounded p-2 position-absolute d-none shadow-sm"
                                                                                    style="white-space: nowrap; z-index: 1000; min-width: 150px;">
                                                                                </div>
                                                                            </div>
                                                                            @if (visita.TieneServiciosEnCurso == true)
                                                                            {
                                                                                <br>
                                                                                <small class="badge bg-info">En curso</small>
                                                                            }
                                                                            else if (visita.TieneServiciosPendientes == true)
                                                                            {
                                                                                <br>
                                                                                <small class="badge bg-warning">Pendiente</small>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <span>@(visita.Tipo?.ToString() ?? "Servicio")</span>
                                                                            @if (visita.TieneServiciosEnCurso == true)
                                                                            {
                                                                                <br>
                                                                                <small class="badge bg-info">En curso</small>
                                                                            }
                                                                            else if (visita.TieneServiciosPendientes == true)
                                                                            {
                                                                                <br>
                                                                                <small class="badge bg-warning">Pendiente</small>
                                                                            }
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (visita.MontoPagado > 0)
                                                                        {
                                                                            <strong class="text-success">
                                                                                $@visita.MontoPagado.ToString("F2")
                                                                            </strong>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-muted">$0.00</span>
                                                                        }
                                                                    </td>
                                                                    <td class="text-muted">@visita.MetodoPago</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                        </div>

                                        <!-- Vista Mobile: Cards -->
                                        <div class="d-lg-none">
                                            <div class="p-2">
                                                @foreach (dynamic visita in historial)
                                                {
                                                    <div class="card mb-2 border-0 shadow-sm visita-card-mobile">
                                                        <div class="card-body p-2">
                                                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                                                <div class="flex-grow-1">
                                                                    @if (visita.Tipo == "Abono")
                                                                    {
                                                                        <strong class="small d-block mb-1">@visita.PlayaNombre</strong>
                                                                        <small class="text-muted d-block">Plaza @visita.PlazaNumero</small>
                                                                        <small class="text-muted d-block">
                                                                            Inicio: @visita.FechaHoraIngreso.ToString("dd/MM/yyyy")
                                                                        </small>
                                                                        @if (visita.FechaHoraEgreso != null)
                                                                        {
                                                                            <small class="text-muted d-block">
                                                                                Fin: @(((DateTime)visita.FechaHoraEgreso).ToString("dd/MM/yyyy"))
                                                                            </small>
                                                                        }
                                                                        else
                                                                        {
                                                                            <small class="text-muted d-block">Fin: -</small>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <strong class="small d-block mb-1">@visita.PlayaNombre</strong>
                                                                        <small class="text-muted">
                                                                            @visita.FechaHoraIngreso.ToString("dd/MM/yyyy HH:mm")
                                                                        </small>
                                                                    }
                                                                </div>
                                                                <div class="text-end">
                                                                    @if (visita.Tipo == "Abono")
                                                                    {
                                                                        <small class="d-block mb-1">Abono</small>
                                                                        @if (visita.EstadoAbono != null)
                                                                        {
                                                                            <small class="fw-bold @(visita.EstadoAbono == "Activo" ? "text-success" : 
                                                                                  visita.EstadoAbono == "Pendiente" ? "text-warning" : 
                                                                                  visita.EstadoAbono == "Finalizado" ? "text-secondary" : 
                                                                                  visita.EstadoAbono == "Cancelado" ? "text-danger" : "text-secondary")">
                                                                                @visita.EstadoAbono
                                                                            </small>
                                                                        }
                                                                    }
                                                                    else if (visita.MostrarVarios == true)
                                                                    {
                                                                        <div class="d-inline-block position-relative">
                                                                            <small class="toggle-varios-servicios text-dark d-block" style="cursor: pointer;" data-servicios='@Html.Raw(Json.Serialize(visita.ServiciosNombres ?? new List<string>()))'>
                                                                                Varios <i class="bi bi-caret-right-fill text-dark"></i>
                                                                            </small>
                                                                            <div class="varios-servicios-list bg-light border rounded p-2 position-absolute d-none shadow-sm"
                                                                                style="white-space: nowrap; z-index: 1000; min-width: 150px;">
                                                                            </div>
                                                                        </div>
                                                                        @if (visita.TieneServiciosEnCurso == true)
                                                                        {
                                                                            <small class="badge bg-info d-block mt-1">En curso</small>
                                                                        }
                                                                        else if (visita.TieneServiciosPendientes == true)
                                                                        {
                                                                            <small class="badge bg-warning d-block mt-1">Pendiente</small>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <small class="d-block">@(visita.Tipo?.ToString() ?? "Servicio")</small>
                                                                        @if (visita.TieneServiciosEnCurso == true)
                                                                        {
                                                                            <small class="badge bg-info d-block mt-1">En curso</small>
                                                                        }
                                                                        else if (visita.TieneServiciosPendientes == true)
                                                                        {
                                                                            <small class="badge bg-warning d-block mt-1">Pendiente</small>
                                                                        }
                                                                    }
                                                                    @if (visita.Tipo != "Abono")
                                                                    {
                                                                        @if (visita.MontoPagado > 0)
                                                                        {
                                                                            <strong class="text-dark small d-block mt-1">
                                                                                $@visita.MontoPagado.ToString("F2")
                                                                            </strong>
                                                                        }
                                                                        else
                                                                        {
                                                                            <small class="text-muted d-block mt-1">$0.00</small>
                                                                        }
                                                                        <small class="text-muted d-block mt-1">@visita.MetodoPago</small>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-3 px-3">
                                            <i class="bi bi-inbox fs-1 text-muted opacity-50"></i>
                                            <p class="text-muted mt-2 mb-0 small">Este vehículo aún no tiene visitas registradas.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-car-front display-1 text-muted opacity-50"></i>
                            <h5 class="mt-3 text-muted fw-semibold">No tienes vehículos registrados</h5>
                            <p class="text-muted">Agrega un vehículo en la sección de <a asp-controller="Conductor" asp-action="Vehiculos" class="text-decoration-none fw-semibold">Vehículos</a> para comenzar a registrar visitas.</p>
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-warning mt-3 rounded-3">
                                    <small>Información de depuración: @ViewBag.Error</small>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Efectos modernos sin gradientes - manteniendo colores originales */
    
    /* Cards principales */
    .historial-card {
    }
    
    .historial-card:hover {
        transform: none !important;
        box-shadow: inherit !important;
    }
    
    .vehiculo-card {
        overflow: hidden;
    }
    
    .vehiculo-card:hover {
        transform: none !important;
        box-shadow: inherit !important;
    }
    
    /* Tabla desktop - formato similar a ServicioExtraRealizado */
    .table tbody tr:hover {
        background-color: inherit !important;
    }
    
    /* Cards mobile */
    .visita-card-mobile {
        border-left: 4px solid #0d6efd !important;
        border-top: 1px solid #dee2e6 !important;
        border-right: 1px solid #dee2e6 !important;
        border-bottom: 1px solid #dee2e6 !important;
    }
    
    .visita-card-mobile .card-body {
        padding: 0.5rem !important;
    }
    
    /* Mejorar contraste de las cards principales */
    .vehiculo-card {
        border: 1px solid #dee2e6 !important;
    }
    
    .vehiculo-card .card-header {
        border-bottom: 2px solid rgba(255, 255, 255, 0.2) !important;
    }
    
    /* Badges mejorados */
    .badge {
        font-family: 'Courier New', monospace;
        letter-spacing: 0.5px;
        font-weight: 600;
    }
    
    /* Header de cards */
    .card-header h5 {
        font-size: 1.1rem;
    }
    
    /* Responsive */
    @@media (max-width: 991.98px) {
        .card-body {
            padding: 1rem !important;
        }
    }
    
    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.8rem;
        }
        
        .table th,
        .table td {
            padding: 0.5rem;
        }
        
        .card-header h5 {
            font-size: 1rem;
        }
        
        .visita-card-mobile {
            margin-bottom: 1rem;
        }
    }
    
    @@media (max-width: 576px) {
        .container-fluid {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }
        
        .card-body {
            padding: 0.75rem !important;
        }
    }
    
    /* Estilos para el toggle de servicios */
    .varios-servicios-list {
        max-width: 200px;
    }
    
    @@media (max-width: 991.98px) {
        .varios-servicios-list {
            max-width: 100%;
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-varios-servicios").forEach(function (toggle) {
            toggle.addEventListener("click", function (e) {
                e.stopPropagation(); // evitar que se cierre al hacer clic en sí mismo
                const container = this.closest(".d-inline-block");
                const list = container.querySelector(".varios-servicios-list");
                const icon = this.querySelector("i");
                const serviciosData = this.getAttribute("data-servicios");
                
                // Cerrar cualquier otro abierto
                document.querySelectorAll(".varios-servicios-list").forEach(function (otherList) {
                    if (otherList !== list) {
                        otherList.classList.add("d-none");
                        const otherIcon = otherList.closest(".d-inline-block")?.querySelector("i");
                        if (otherIcon) {
                            otherIcon.classList.remove("bi-caret-left-fill");
                            otherIcon.classList.add("bi-caret-right-fill");
                        }
                    }
                });

                // Toggle el actual
                if (list.classList.contains("d-none")) {
                    // Cargar servicios en la lista
                    list.innerHTML = '';
                    if (serviciosData) {
                        try {
                            const servicios = JSON.parse(serviciosData);
                            if (servicios && servicios.length > 0) {
                                servicios.forEach(function(servicio) {
                                    const div = document.createElement('div');
                                    div.textContent = servicio;
                                    list.appendChild(div);
                                });
                            } else {
                                const div = document.createElement('div');
                                div.className = 'text-muted';
                                div.textContent = 'No hay servicios registrados';
                                list.appendChild(div);
                            }
                        } catch (e) {
                            console.error('Error parsing servicios:', e);
                        }
                    }
                    
                    // Posicionar la lista de manera responsive
                    const rect = container.getBoundingClientRect();
                    const listWidth = 150; // min-width
                    const windowWidth = window.innerWidth;
                    const isMobile = windowWidth < 992; // lg breakpoint
                    
                    // Resetear estilos
                    list.style.left = '';
                    list.style.right = '';
                    list.style.top = '';
                    list.style.bottom = '';
                    list.style.marginLeft = '';
                    list.style.marginRight = '';
                    list.style.marginTop = '';
                    
                    if (isMobile) {
                        // En mobile: posicionar hacia abajo
                        list.style.top = '100%';
                        list.style.left = '0';
                        list.style.marginTop = '0.25rem';
                    } else {
                        // En desktop: posicionar hacia la derecha
                        list.style.left = '100%';
                        list.style.top = '0';
                        list.style.marginLeft = '0.5rem';
                        
                        // Si se sale de la pantalla, posicionar hacia la izquierda
                        if (rect.right + listWidth > windowWidth) {
                            list.style.left = 'auto';
                            list.style.right = '100%';
                            list.style.marginLeft = '';
                            list.style.marginRight = '0.5rem';
                        }
                    }
                    
                    list.classList.remove("d-none");
                    icon.classList.remove("bi-caret-right-fill");
                    icon.classList.add("bi-caret-left-fill");
                } else {
                    list.classList.add("d-none");
                    icon.classList.remove("bi-caret-left-fill");
                    icon.classList.add("bi-caret-right-fill");
                }
            });
        });

        // Cerrar si se hace clic fuera
        document.addEventListener("click", function (e) {
            if (!e.target.closest(".d-inline-block.position-relative")) {
                document.querySelectorAll(".varios-servicios-list").forEach(function (list) {
                    if (!list.classList.contains("d-none")) {
                        list.classList.add("d-none");
                        const icon = list.closest(".d-inline-block")?.querySelector("i");
                        if (icon) {
                            icon.classList.remove("bi-caret-left-fill");
                            icon.classList.add("bi-caret-right-fill");
                        }
                    }
                });
            }
        });
    });
</script>

