@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Configuración común de idioma para DataTables
            const datatableLanguage = {
                "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json",
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "paginate": {
                    "previous": "« Anterior",
                    "next": "Siguiente »"
                }
            };

            // Inicializar DataTables para tablas de Abonos y Visitas (solo vista desktop)
            $('.datatable-abonos, .datatable-visitas').DataTable({
                "pageLength": 5,
                "lengthMenu": [5, 10, 25, 50],
                "language": datatableLanguage,
                "order": [],           // Sin orden inicial específico
                "dom": 'lrtp',         // Oculta buscador y texto de información (usamos info: false)
                "info": false,         // Oculta el texto "Mostrando X a Y de Z entradas"
                "drawCallback": function () {
                    // Forzar paginador: « Anterior [número actual] Siguiente »
                    const api = this.api();
                    const info = api.page.info();
                    const currentPage = info.page + 1;

                    const $wrapper = $(api.table().container());
                    const $pagination = $wrapper.find('ul.pagination');

                    if ($pagination.length) {
                        // Eliminar cualquier botón numérico existente (incluyendo "...")
                        $pagination.find('li')
                            .not('.previous')
                            .not('.next')
                            .remove();

                        // Crear el botón con el número de página actual
                        const $current = $('<li class="paginate_button active"><a class="page-link" href="#">' + currentPage + '</a></li>');
                        $current.insertBefore($pagination.find('li.next'));
                    }
                }
            });

            // Paginación simple para secciones móviles de Abonos y Visitas
            const defaultPageSize = 5;
            $('.mobile-paged-section').each(function () {
                const $section = $(this);
                const pageSize = parseInt($section.data('page-size')) || defaultPageSize;
                const $items = $section.find('.mobile-item');
                const totalItems = $items.length;
                const totalPages = Math.ceil(totalItems / pageSize);
                const $pager = $section.find('.mobile-pager');
                const $pageIndicator = $section.find('.mobile-page-indicator');

                if (totalPages <= 1) {
                    // Si solo hay una página, mostramos todo y ocultamos el pager
                    $items.removeClass('d-none');
                    $pager.addClass('d-none');
                    return;
                }

                let currentPage = 1;

                const renderPage = () => {
                    $items.each(function (index) {
                        const page = Math.floor(index / pageSize) + 1;
                        $(this).toggleClass('d-none', page !== currentPage);
                    });

                    $pageIndicator.text(currentPage);
                    $pager.removeClass('d-none');
                };

                renderPage();

                $section.find('.mobile-prev').on('click', function (e) {
                    e.preventDefault();
                    if (currentPage > 1) {
                        currentPage--;
                        renderPage();
                    }
                });

                $section.find('.mobile-next').on('click', function (e) {
                    e.preventDefault();
                    if (currentPage < totalPages) {
                        currentPage++;
                        renderPage();
                    }
                });
            });

            document.querySelectorAll(".toggle-varios-servicios").forEach(function (toggle) {
            toggle.addEventListener("click", function (e) {
                e.stopPropagation(); // evitar que se cierre al hacer clic en sí mismo
                const container = this.closest(".d-inline-block");
                const list = container.querySelector(".varios-servicios-list");
                const icon = this.querySelector("i");
                const serviciosData = this.getAttribute("data-servicios");
                
                // Cerrar cualquier otro abierto
                document.querySelectorAll(".varios-servicios-list").forEach(function (otherList) {
                    if (otherList !== list) {
                        otherList.classList.add("d-none");
                        const otherIcon = otherList.closest(".d-inline-block")?.querySelector("i");
                        if (otherIcon) {
                            otherIcon.classList.remove("bi-caret-left-fill");
                            otherIcon.classList.add("bi-caret-right-fill");
                        }
                    }
                });

                // Toggle el actual
                if (list.classList.contains("d-none")) {
                    // Cargar servicios en la lista
                    list.innerHTML = '';
                    if (serviciosData) {
                        try {
                            const servicios = JSON.parse(serviciosData);
                            if (servicios && servicios.length > 0) {
                                servicios.forEach(function(servicio) {
                                    const div = document.createElement('div');
                                    div.textContent = servicio;
                                    list.appendChild(div);
                                });
                            } else {
                                const div = document.createElement('div');
                                div.className = 'text-muted';
                                div.textContent = 'No hay servicios registrados';
                                list.appendChild(div);
                            }
                        } catch (e) {
                            console.error('Error parsing servicios:', e);
                        }
                    }
                    
                    // Posicionar la lista de manera responsive
                    const rect = container.getBoundingClientRect();
                    const listWidth = 150; // min-width
                    const windowWidth = window.innerWidth;
                    const isMobile = windowWidth < 992; // lg breakpoint
                    
                    // Resetear estilos
                    list.style.left = '';
                    list.style.right = '';
                    list.style.top = '';
                    list.style.bottom = '';
                    list.style.marginLeft = '';
                    list.style.marginRight = '';
                    list.style.marginTop = '';
                    
                    if (isMobile) {
                        // En mobile: posicionar hacia abajo
                        list.style.top = '100%';
                        list.style.left = '0';
                        list.style.marginTop = '0.25rem';
                    } else {
                        // En desktop: posicionar hacia la derecha
                        list.style.left = '100%';
                        list.style.top = '0';
                        list.style.marginLeft = '0.5rem';
                        
                        // Si se sale de la pantalla, posicionar hacia la izquierda
                        if (rect.right + listWidth > windowWidth) {
                            list.style.left = 'auto';
                            list.style.right = '100%';
                            list.style.marginLeft = '';
                            list.style.marginRight = '0.5rem';
                        }
                    }
                    
                    list.classList.remove("d-none");
                    icon.classList.remove("bi-caret-right-fill");
                    icon.classList.add("bi-caret-left-fill");
                } else {
                    list.classList.add("d-none");
                    icon.classList.remove("bi-caret-left-fill");
                    icon.classList.add("bi-caret-right-fill");
                }
            });
        });

            // Cerrar si se hace clic fuera
            document.addEventListener("click", function (e) {
                if (!e.target.closest(".d-inline-block.position-relative")) {
                    document.querySelectorAll(".varios-servicios-list").forEach(function (list) {
                        if (!list.classList.contains("d-none")) {
                            list.classList.add("d-none");
                            const icon = list.closest(".d-inline-block")?.querySelector("i");
                            if (icon) {
                                icon.classList.remove("bi-caret-left-fill");
                                icon.classList.add("bi-caret-right-fill");
                            }
                        }
                    });
                }
            });
        });
    </script>
