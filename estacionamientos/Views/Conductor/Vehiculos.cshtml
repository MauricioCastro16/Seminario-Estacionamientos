<script>
    let vehiculoActual = null;

    function seleccionarVehiculo(patente) {
        fetch('/Conductor/SeleccionarVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                return;
            }
            
            vehiculoActual = data;
            mostrarDetalleVehiculo(data);
            
            sessionStorage.setItem('vehiculoSeleccionado', JSON.stringify(data));
            
        })
        .catch(error => {
        });
    }

    function mostrarDetalleVehiculo(vehiculo) {
        document.getElementById('sinVehiculoSeleccionado').style.display = 'none';
        
        const detalleDiv = document.getElementById('detalleVehiculo');
        detalleDiv.style.display = 'block';
        
        document.getElementById('patenteVehiculo').textContent = vehiculo.patente;
        document.getElementById('marcaVehiculo').textContent = vehiculo.marca;
        document.getElementById('tipoVehiculo').textContent = vehiculo.tipo;
        
        const imagen = document.getElementById('imagenVehiculo');
        const tipoVehiculoLower = vehiculo.tipo.toLowerCase();
        
        if (tipoVehiculoLower.includes('automóvil') || tipoVehiculoLower.includes('auto')) {
            imagen.src = '/estacionamientos/Resources/Model/auto.png';
        } else if (tipoVehiculoLower.includes('camioneta') || tipoVehiculoLower.includes('suv')) {
            imagen.src = '/estacionamientos/Resources/Model/camioneta.png';
        } else if (tipoVehiculoLower.includes('motocicleta') || tipoVehiculoLower.includes('moto')) {
            imagen.src = '/estacionamientos/Resources/Model/moto.png';
        } else if (tipoVehiculoLower.includes('camión') || tipoVehiculoLower.includes('camion')) {
            imagen.src = '/estacionamientos/Resources/Model/suv.png';
        } else {
            imagen.src = '/estacionamientos/Resources/Model/auto.png';
        }
        
        imagen.alt = `Imagen de ${vehiculo.tipo}`;
    }

    function cambiarFavorito(patente) {
        fetch('/Conductor/CambiarFavorito', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.querySelectorAll('.favorito-btn').forEach(btn => {
                    const icon = btn.querySelector('i');
                    if (btn.dataset.patente === patente) {
                        icon.className = data.esFavorito ? 'bi bi-star-fill text-warning' : 'bi bi-star text-muted';
                    } else {
                        icon.className = 'bi bi-star text-muted';
                    }
                });
                
                if (data.esFavorito) {
                    seleccionarVehiculo(patente);
                }
                
                const toast = document.createElement('div');
                toast.className = 'alert alert-success alert-dismissible fade show position-fixed';
                toast.style.top = '20px';
                toast.style.right = '20px';
                toast.style.zIndex = '9999';
                toast.innerHTML = `
                    <i class="bi bi-star-fill me-2"></i>
                    ${data.message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(toast);
                
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.parentNode.removeChild(toast);
                    }
                }, 3000);
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(error => {
            alert('Error al cambiar el vehículo favorito');
        });
    }

    function solicitarVehiculo() {
        const modal = new bootstrap.Modal(document.getElementById('modalCrearVehiculo'));
        modal.show();
    }


    function mostrarErrorCampo(campoId, mensaje) {
        const errorSpan = document.getElementById(campoId + 'Error');
        if (errorSpan) {
            errorSpan.textContent = mensaje;
            errorSpan.style.display = 'block';
        }
    }

    function limpiarErrorCampo(campoId) {
        const errorSpan = document.getElementById(campoId + 'Error');
        if (errorSpan) {
            errorSpan.textContent = '';
        }
    }

    function limpiarTodosLosErrores() {
        limpiarErrorCampo('patenteInput');
        limpiarErrorCampo('marcaInput');
        limpiarErrorCampo('clasificacionSelect');
    }

    function crearVehiculo() {
        limpiarTodosLosErrores();
        
        const patente = document.getElementById('patenteInput').value.trim();
        const marca = document.getElementById('marcaInput').value.trim();
        const clasificacionId = document.getElementById('clasificacionSelect').value;

        let hayErrores = false;

        if (!patente) {
            mostrarErrorCampo('patenteInput', 'La patente es obligatoria');
            hayErrores = true;
        }

        if (!marca) {
            mostrarErrorCampo('marcaInput', 'La marca es obligatoria');
            hayErrores = true;
        }

        if (!clasificacionId) {
            mostrarErrorCampo('clasificacionSelect', 'Debes seleccionar un tipo de vehículo');
            hayErrores = true;
        }

        if (hayErrores) {
            return;
        }

        fetch('/Conductor/CrearVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}&marca=${encodeURIComponent(marca)}&clasificacionId=${encodeURIComponent(clasificacionId)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                mostrarNotificacion(data.message, 'success');
                const modal = bootstrap.Modal.getInstance(document.getElementById('modalCrearVehiculo'));
                modal.hide();
                document.getElementById('formCrearVehiculo').reset();
                limpiarTodosLosErrores();
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                const errorMsg = data.error || 'Error desconocido';
                const errorLower = errorMsg.toLowerCase();
                
                if (errorLower.includes('patente') || errorLower.includes('ya tienes este vehículo')) {
                    mostrarErrorCampo('patenteInput', errorMsg);
                } else if (errorLower.includes('marca')) {
                    mostrarErrorCampo('marcaInput', errorMsg);
                } else if (errorLower.includes('clasificación') || errorLower.includes('clasificacion') || errorLower.includes('tipo')) {
                    mostrarErrorCampo('clasificacionSelect', errorMsg);
                } else {
                    mostrarErrorCampo('patenteInput', errorMsg);
                }
            }
        })
        .catch(error => {
            mostrarErrorCampo('patenteInput', 'Error al crear el vehículo. Intenta nuevamente.');
        });
    }

    function mostrarNotificacion(mensaje, tipo = 'info') {
        const toast = document.createElement('div');
        toast.className = `alert alert-${tipo === 'success' ? 'success' : tipo === 'error' ? 'danger' : 'info'} alert-dismissible fade show position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            ${mensaje}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            if (toast.parentNode) {
                toast.parentNode.removeChild(toast);
            }
        }, 3000);
    }

    let patenteDesvincular = null;

    function desvincularVehiculo(patente) {
        patenteDesvincular = patente;
        document.getElementById('patenteDesvincular').textContent = patente;
        
        const modal = new bootstrap.Modal(document.getElementById('modalDesvincularVehiculo'));
        modal.show();
    }

    function confirmarDesvincularVehiculo() {
        if (!patenteDesvincular) {
            return;
        }

        const patente = patenteDesvincular;
        
        const modal = bootstrap.Modal.getInstance(document.getElementById('modalDesvincularVehiculo'));
        modal.hide();

        fetch('/Conductor/DesvincularVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                mostrarNotificacion('Vehículo desvinculado correctamente', 'success');
                
                if (vehiculoActual && vehiculoActual.patente === patente) {
                    vehiculoActual = null;
                    document.getElementById('sinVehiculoSeleccionado').style.display = 'block';
                    document.getElementById('detalleVehiculo').style.display = 'none';
                }
                
                const vehiculoSeleccionado = sessionStorage.getItem('vehiculoSeleccionado');
                if (vehiculoSeleccionado) {
                    const vehiculo = JSON.parse(vehiculoSeleccionado);
                    if (vehiculo.patente === patente) {
                        sessionStorage.removeItem('vehiculoSeleccionado');
                    }
                }
                
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                mostrarNotificacion(data.error, 'error');
            }
        })
        .catch(error => {
            mostrarNotificacion('Error al desvincular el vehículo', 'error');
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('btnConfirmarDesvincular').addEventListener('click', confirmarDesvincularVehiculo);

        document.addEventListener('input', function(e) {
            if (e.target.id === 'patenteInput') limpiarErrorCampo('patenteInput');
            if (e.target.id === 'marcaInput') limpiarErrorCampo('marcaInput');
        });
        
        document.addEventListener('change', function(e) {
            if (e.target.id === 'clasificacionSelect') limpiarErrorCampo('clasificacionSelect');
        });
        
        const modalCrear = document.getElementById('modalCrearVehiculo');
        if (modalCrear) {
            modalCrear.addEventListener('show.bs.modal', function() {
                limpiarTodosLosErrores();
            });
        }

        const vehiculoSeleccionado = sessionStorage.getItem('vehiculoSeleccionado');
        if (vehiculoSeleccionado) {
            const vehiculo = JSON.parse(vehiculoSeleccionado);
            mostrarDetalleVehiculo(vehiculo);
            vehiculoActual = vehiculo;
            return;
        }
        
        const vehiculoFavorito = '@vehiculoFavorito';
        if (vehiculoFavorito && vehiculoFavorito !== '') {
            seleccionarVehiculo(vehiculoFavorito);
        }

    });
</script>

