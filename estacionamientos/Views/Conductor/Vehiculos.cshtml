@model List<estacionamientos.Models.Vehiculo>

@{
    ViewData["Title"] = "Mis Vehículos";
    var vehiculoFavorito = ViewBag.VehiculoFavorito as string;
    var conduces = ViewBag.Conduces as List<estacionamientos.Models.Conduce>;
}

<div class="container-fluid py-4">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-@(TempData["TipoMensaje"] ?? "info") alert-dismissible fade show rounded-3 shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <!-- Sección superior: Vehículo seleccionado -->
        <div class="col-12 mb-4">
            <div class="card shadow-lg border-0 rounded-4 vehiculo-seleccionado-card">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-car-front me-2"></i>
                        Vehículo Seleccionado
                    </h4>
                </div>
                <div class="card-body p-4" id="vehiculoSeleccionado">
                    <div class="text-center text-muted py-5" id="sinVehiculoSeleccionado">
                        <div class="empty-state-icon mb-3">
                            <i class="bi bi-car-front display-1 text-muted opacity-50"></i>
                        </div>
                        <h5 class="mt-3 fw-semibold">Selecciona un vehículo</h5>
                    </div>
                    <div id="detalleVehiculo" style="display: none;">
                        <div class="row align-items-center g-4">
                            <div class="col-12 col-md-3 text-center">
                                <div class="vehiculo-image-wrapper">
                                    <img id="imagenVehiculo" src="" alt="Imagen del vehículo" class="img-fluid rounded-3 vehiculo-image shadow-sm">
                                </div>
                            </div>
                            <div class="col-12 col-md-9">
                                <div class="vehiculo-details">
                                    <h5 class="fw-bold mb-2">
                                        <i class="bi bi-car-front me-2 text-muted"></i>
                                        <span id="patenteVehiculo"></span>
                                    </h5>
                                    <div class="text-muted">
                                        <i class="bi bi-tag me-1"></i>
                                        <span id="marcaVehiculo"></span>
                                        <span class="mx-2">-</span>
                                        <span id="tipoVehiculo"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección inferior: Lista de vehículos -->
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-4 vehiculos-lista-card">
                 <div class="card-header bg-light border-0 rounded-top-4">
                     <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                         <h4 class="mb-0 fw-semibold">
                             <i class="bi bi-list-ul me-2 text-muted"></i>
                             Tus Vehículos
                         </h4>
                         <button class="btn btn-primary rounded-3 shadow-sm" data-bs-toggle="modal" data-bs-target="#modalCrearVehiculo">
                             <i class="bi bi-plus-circle me-2"></i>Agregar Vehículo
                         </button>
                     </div>
                 </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <!-- Vista Desktop: Tabla tradicional -->
                        <div class="d-none d-lg-block">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center" style="width: 40px;">⭐</th>
                                            <th>Patente</th>
                                            <th>Marca - Tipo</th>
                                            <th class="text-center" style="width: 150px;">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var vehiculo in Model)
                                        {
                                            var conduce = conduces?.FirstOrDefault(c => c.VehPtnt == vehiculo.VehPtnt);
                                            var esFavorito = conduce?.Favorito ?? false;
                                            <tr>
                                                <td class="text-center">
                                                    <button class="btn btn-link p-0 favorito-btn" 
                                                            data-patente="@vehiculo.VehPtnt" 
                                                            onclick="cambiarFavorito('@vehiculo.VehPtnt')">
                                                        <i class="bi @(esFavorito ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    <span class="fw-semibold">@vehiculo.VehPtnt</span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@vehiculo.VehMarc</small>
                                                    <span class="mx-1">-</span>
                                                    <small>@(vehiculo.Clasificacion?.ClasVehTipo ?? "Sin clasificación")</small>
                                                </td>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-outline-primary me-1" 
                                                            onclick="seleccionarVehiculo('@vehiculo.VehPtnt')"
                                                            title="Seleccionar">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            onclick="desvincularVehiculo('@vehiculo.VehPtnt')"
                                                            title="Desvincular">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Vista Mobile: Cards -->
                        <div class="d-lg-none">
                            @foreach (var vehiculo in Model)
                            {
                                var conduce = conduces?.FirstOrDefault(c => c.VehPtnt == vehiculo.VehPtnt);
                                var esFavorito = conduce?.Favorito ?? false;
                                <div class="card mb-2 border-0 shadow-sm vehiculo-card-mobile rounded-3">
                                    <div class="card-body p-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center flex-grow-1">
                                                <button class="btn btn-link p-0 me-2 favorito-btn" 
                                                        data-patente="@vehiculo.VehPtnt" 
                                                        onclick="cambiarFavorito('@vehiculo.VehPtnt')">
                                                    <i class="bi @(esFavorito ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                                                </button>
                                                <div class="flex-grow-1">
                                                    <div class="fw-semibold">@vehiculo.VehPtnt</div>
                                                    <small class="text-muted">
                                                        @vehiculo.VehMarc - @(vehiculo.Clasificacion?.ClasVehTipo ?? "Sin clasificación")
                                                    </small>
                                                </div>
                                            </div>
                                            <div>
                                                <button class="btn btn-sm btn-outline-primary me-1" 
                                                        onclick="seleccionarVehiculo('@vehiculo.VehPtnt')"
                                                        title="Seleccionar">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" 
                                                        onclick="desvincularVehiculo('@vehiculo.VehPtnt')"
                                                        title="Desvincular">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="text-muted">No tienes vehículos registrados.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para crear vehículo -->
<div class="modal fade" id="modalCrearVehiculo" tabindex="-1" aria-labelledby="modalCrearVehiculoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-semibold" id="modalCrearVehiculoLabel">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Nuevo Vehículo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formCrearVehiculo">
                    <div class="mb-3">
                        <label for="patenteInput" class="form-label fw-semibold">Patente</label>
                        <input type="text" class="form-control rounded-3" id="patenteInput">
                        <span id="patenteError" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="marcaInput" class="form-label fw-semibold">Marca</label>
                        <input type="text" class="form-control rounded-3" id="marcaInput" placeholder="Ej: Toyota, Ford, Honda">
                        <span id="marcaError" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="clasificacionSelect" class="form-label fw-semibold">Tipo de Vehículo</label>
                        <select class="form-select rounded-3" id="clasificacionSelect" asp-items="ViewBag.ClasVehID">
                            <option value="">-- Seleccione un tipo --</option>
                        </select>
                        <span id="clasificacionError" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 rounded-bottom-4">
                <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-primary rounded-3 shadow-sm" onclick="crearVehiculo()">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Vehículo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para desvincular vehículo -->
<div class="modal fade" id="modalDesvincularVehiculo" tabindex="-1" aria-labelledby="modalDesvincularVehiculoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header bg-danger text-white rounded-top-4">
                <h5 class="modal-title fw-semibold" id="modalDesvincularVehiculoLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Desvinculación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="mb-3 fw-semibold">¿Estás seguro de que quieres desvincular este vehículo?</p>
                <div class="card bg-light border-0 rounded-3 shadow-sm">
                    <div class="card-body p-3">
                        <p class="mb-0">
                            <strong class="text-muted">Patente:</strong>
                            <span id="patenteDesvincular" class="badge bg-primary fs-6 ms-2 px-3 py-2"></span>
                        </p>
                    </div>
                </div>
                <p class="text-muted mt-3 mb-0">
                    <small><i class="bi bi-info-circle me-1"></i>Esta acción no se puede deshacer. El vehículo será eliminado de tu lista.</small>
                </p>
            </div>
            <div class="modal-footer border-0 rounded-bottom-4">
                <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger rounded-3 shadow-sm" id="btnConfirmarDesvincular">
                    <i class="bi bi-check-circle me-1"></i>Confirmar Desvinculación
                </button>
            </div>
        </div>
    </div>
</div>

