@model List<estacionamientos.Models.Vehiculo>

@{
    ViewData["Title"] = "Mis Vehículos";
    var vehiculoFavorito = ViewBag.VehiculoFavorito as string;
    var conduces = ViewBag.Conduces as List<estacionamientos.Models.Conduce>;
    
    // Debug: Log para verificar los datos
    Console.WriteLine($"Model count: {Model?.Count ?? 0}");
    Console.WriteLine($"Conduces count: {conduces?.Count ?? 0}");
    Console.WriteLine($"VehiculoFavorito: {vehiculoFavorito}");
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sección superior: Vehículo seleccionado -->
        <div class="col-12 mb-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-car-front me-2"></i>
                        Vehículo Seleccionado
                    </h4>
                </div>
                <div class="card-body" id="vehiculoSeleccionado">
                    <div class="text-center text-muted py-5" id="sinVehiculoSeleccionado">
                        <i class="bi bi-car-front display-1 text-muted"></i>
                        <h5 class="mt-3">Selecciona un vehículo</h5>
                        <p class="text-muted">Elige uno de tus vehículos de la lista de abajo para ver sus detalles</p>
                    </div>
                    <div id="detalleVehiculo" style="display: none;">
                        <div class="row align-items-center">
                            <div class="col-md-3 text-center">
                                <img id="imagenVehiculo" src="" alt="Imagen del vehículo" class="img-fluid rounded" style="max-height: 200px;">
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h5 class="fw-bold mb-2">
                                            <i class="bi bi-car-front me-2"></i>
                                            <span id="patenteVehiculo"></span>
                                        </h5>
                                        <p class="text-muted mb-1">
                                            <strong>Marca:</strong> <span id="marcaVehiculo"></span>
                                        </p>
                                        <p class="text-muted mb-1">
                                            <strong>Tipo:</strong> <span id="tipoVehiculo"></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección inferior: Lista de vehículos -->
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4">
                 <div class="card-header bg-light">
                     <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                         <h4 class="mb-2 mb-md-0">
                             <i class="bi bi-list-ul me-2"></i>
                             Tus Vehículos
                         </h4>
                         <button class="btn btn-success w-100 w-md-auto" data-bs-toggle="modal" data-bs-target="#modalCrearVehiculo">
                             <i class="bi bi-plus-circle me-2"></i>Agregar Vehículo
                         </button>
                     </div>
                 </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <!-- Vista Desktop: Tabla tradicional -->
                        <div class="d-none d-lg-block">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">⭐</th>
                                            <th>Patente</th>
                                            <th>Tipo de Vehículo</th>
                                            <th>Marca</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var vehiculo in Model)
                                        {
                                            var conduce = conduces?.FirstOrDefault(c => c.VehPtnt == vehiculo.VehPtnt);
                                            var esFavorito = conduce?.Favorito ?? false;
                                            <tr>
                                                <td class="text-center">
                                                    <button class="btn btn-sm btn-link p-0 favorito-btn" 
                                                            data-patente="@vehiculo.VehPtnt" 
                                                            onclick="cambiarFavorito('@vehiculo.VehPtnt')">
                                                        <i class="bi @(esFavorito ? "bi-star-fill text-warning" : "bi-star text-muted")" 
                                                           style="font-size: 1.2rem;"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary fs-6">@vehiculo.VehPtnt</span>
                                                </td>
                                                <td>
                                                    <span class="fw-medium">@(vehiculo.Clasificacion?.ClasVehTipo ?? "Sin clasificación")</span>
                                                </td>
                                                <td>@vehiculo.VehMarc</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary me-2" 
                                                            onclick="seleccionarVehiculo('@vehiculo.VehPtnt')">
                                                        <i class="bi bi-check-circle me-1"></i>Seleccionar
                                                    </button>
                                                     <button class="btn btn-sm btn-outline-danger" 
                                                             onclick="desvincularVehiculo('@vehiculo.VehPtnt')">
                                                         <i class="bi bi-x-circle me-1"></i>Desvincular
                                                     </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Vista Mobile: Cards -->
                        <div class="d-lg-none">
                            @foreach (var vehiculo in Model)
                            {
                                var conduce = conduces?.FirstOrDefault(c => c.VehPtnt == vehiculo.VehPtnt);
                                var esFavorito = conduce?.Favorito ?? false;
                                <div class="card mb-3 border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div class="d-flex align-items-center">
                                                <button class="btn btn-link p-0 me-2 favorito-btn" 
                                                        data-patente="@vehiculo.VehPtnt" 
                                                        onclick="cambiarFavorito('@vehiculo.VehPtnt')">
                                                    <i class="bi @(esFavorito ? "bi-star-fill text-warning" : "bi-star text-muted")" 
                                                       style="font-size: 1.5rem;"></i>
                                                </button>
                                                <div>
                                                    <h6 class="mb-1">
                                                        <span class="badge bg-primary fs-6">@vehiculo.VehPtnt</span>
                                                    </h6>
                                                    <small class="text-muted">@vehiculo.VehMarc</small>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="bi bi-car-front me-2 text-muted"></i>
                                                <small class="text-muted">Tipo:</small>
                                            </div>
                                            <span class="fw-medium">@(vehiculo.Clasificacion?.ClasVehTipo ?? "Sin clasificación")</span>
                                        </div>
                                        
                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <button class="btn btn-outline-primary btn-sm" 
                                                    onclick="seleccionarVehiculo('@vehiculo.VehPtnt')">
                                                <i class="bi bi-check-circle me-1"></i>Seleccionar
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm" 
                                                    onclick="desvincularVehiculo('@vehiculo.VehPtnt')">
                                                <i class="bi bi-x-circle me-1"></i>Desvincular
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-car-front display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">¡Ingrese su primer vehículo!</h5>
                            <p class="text-muted">No tienes vehículos registrados. </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para crear vehículo -->
<div class="modal fade" id="modalCrearVehiculo" tabindex="-1" aria-labelledby="modalCrearVehiculoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCrearVehiculoLabel">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Nuevo Vehículo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formCrearVehiculo">
                    <div class="mb-3">
                        <label for="patenteInput" class="form-label">Patente *</label>
                        <input type="text" class="form-control" id="patenteInput" placeholder="Ej: ABC123" required>
                        <div class="form-text">Ingresa la patente del vehículo</div>
                    </div>
                    <div class="mb-3">
                        <label for="marcaInput" class="form-label">Marca *</label>
                        <input type="text" class="form-control" id="marcaInput" placeholder="Ej: Toyota, Ford, Honda" required>
                        <div class="form-text">Ingresa la marca del vehículo</div>
                    </div>
                    <div class="mb-3">
                        <label for="clasificacionSelect" class="form-label">Tipo de Vehículo *</label>
                        <select class="form-select" id="clasificacionSelect" asp-items="ViewBag.ClasVehID" required>
                            <option value="">-- Seleccione un tipo de vehículo --</option>
                        </select>
                        <div class="form-text">Selecciona el tipo de vehículo</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="crearVehiculo()">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Vehículo
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .table tbody tr {
        transition: background-color 0.2s ease;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        font-family: 'Courier New', monospace;
        letter-spacing: 1px;
    }

    /* Estilos para mobile cards */
    @@media (max-width: 991.98px) {
        .card-body {
            padding: 1rem;
        }
        
        .btn-sm {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
        
        .favorito-btn {
            font-size: 1.5rem !important;
        }
    }

    /* Mejoras para pantallas muy pequeñas */
    @@media (max-width: 576px) {
        .container-fluid {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
        
        .card-header {
            padding: 0.75rem;
        }
        
        .card-header h4 {
            font-size: 1.1rem;
        }
        
        .btn {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
        }
        
        .d-grid.gap-2 {
            gap: 0.5rem !important;
        }
        
        /* Modal responsive */
        .modal-dialog {
            margin: 0.5rem;
            max-width: calc(100% - 1rem);
        }
        
        .modal-content {
            border-radius: 0.5rem;
        }
    }

    /* Estilos específicos para el modal */
    @@media (max-width: 576px) {
        .modal-dialog {
            margin: 1rem;
            max-width: calc(100% - 2rem);
            max-height: calc(100vh - 2rem);
        }
        
        .modal-content {
            border-radius: 0.5rem;
            max-height: calc(100vh - 2rem);
        }
        
        .modal-body {
            padding: 1rem;
            max-height: 60vh;
            overflow-y: auto;
        }
        
        .modal-footer {
            padding: 0.75rem 1rem;
        }
    }
</style>

<script>
    let vehiculoActual = null;

    function seleccionarVehiculo(patente) {
        // Seleccionar el vehículo en la sesión del servidor
        fetch('/Conductor/SeleccionarVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                console.error('Error:', data.error);
                return;
            }
            
            vehiculoActual = data;
            mostrarDetalleVehiculo(data);
            
            // Guardar en sessionStorage para sincronización con el mapa
            sessionStorage.setItem('vehiculoSeleccionado', JSON.stringify(data));
            
        })
        .catch(error => {
            console.error('Error al seleccionar vehículo:', error);
        });
    }

    function mostrarDetalleVehiculo(vehiculo) {
        // Ocultar mensaje de "sin vehículo seleccionado"
        document.getElementById('sinVehiculoSeleccionado').style.display = 'none';
        
        // Mostrar detalle del vehículo
        const detalleDiv = document.getElementById('detalleVehiculo');
        detalleDiv.style.display = 'block';
        
        // Actualizar información
        document.getElementById('patenteVehiculo').textContent = vehiculo.patente;
        document.getElementById('marcaVehiculo').textContent = vehiculo.marca;
        document.getElementById('tipoVehiculo').textContent = vehiculo.tipo;
        
        // Seleccionar imagen según el tipo de vehículo
        const imagen = document.getElementById('imagenVehiculo');
        const tipoVehiculo = vehiculo.tipo.toLowerCase();
        
        if (tipoVehiculo.includes('automóvil') || tipoVehiculo.includes('auto')) {
            imagen.src = '/estacionamientos/Resources/Model/auto.png';
        } else if (tipoVehiculo.includes('camioneta') || tipoVehiculo.includes('suv')) {
            imagen.src = '/estacionamientos/Resources/Model/camioneta.png';
        } else if (tipoVehiculo.includes('motocicleta') || tipoVehiculo.includes('moto')) {
            imagen.src = '/estacionamientos/Resources/Model/moto.png';
        } else if (tipoVehiculo.includes('camión') || tipoVehiculo.includes('camion')) {
            imagen.src = '/estacionamientos/Resources/Model/suv.png'; // Usar SUV como fallback para camiones
        } else {
            imagen.src = '/estacionamientos/Resources/Model/auto.png'; // Imagen por defecto
        }
        
        imagen.alt = `Imagen de ${vehiculo.tipo}`;
    }

    function cambiarFavorito(patente) {
        fetch('/Conductor/CambiarFavorito', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Actualizar todas las estrellas en la tabla
                document.querySelectorAll('.favorito-btn').forEach(btn => {
                    const icon = btn.querySelector('i');
                    if (btn.dataset.patente === patente) {
                        icon.className = data.esFavorito ? 'bi bi-star-fill text-warning' : 'bi bi-star text-muted';
                    } else {
                        icon.className = 'bi bi-star text-muted';
                    }
                });
                
                // Si se marcó como favorito, seleccionarlo automáticamente
                if (data.esFavorito) {
                    seleccionarVehiculo(patente);
                }
                
                // Mostrar mensaje de éxito
                const toast = document.createElement('div');
                toast.className = 'alert alert-success alert-dismissible fade show position-fixed';
                toast.style.top = '20px';
                toast.style.right = '20px';
                toast.style.zIndex = '9999';
                toast.innerHTML = `
                    <i class="bi bi-star-fill me-2"></i>
                    ${data.message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(toast);
                
                // Auto-remove toast after 3 seconds
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.parentNode.removeChild(toast);
                    }
                }, 3000);
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(error => {
            console.error('Error al cambiar favorito:', error);
            alert('Error al cambiar el vehículo favorito');
        });
    }

    function solicitarVehiculo() {
        // Abrir el modal para crear vehículo
        const modal = new bootstrap.Modal(document.getElementById('modalCrearVehiculo'));
        modal.show();
    }


    function crearVehiculo() {
        const patente = document.getElementById('patenteInput').value.trim();
        const marca = document.getElementById('marcaInput').value.trim();
        const clasificacionId = document.getElementById('clasificacionSelect').value;

        // Validaciones
        if (!patente) {
            mostrarNotificacion('La patente es requerida', 'error');
            return;
        }

        if (!marca) {
            mostrarNotificacion('La marca es requerida', 'error');
            return;
        }

        if (!clasificacionId) {
            mostrarNotificacion('Debes seleccionar un tipo de vehículo', 'error');
            return;
        }

        // Enviar datos al servidor
        fetch('/Conductor/CrearVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}&marca=${encodeURIComponent(marca)}&clasificacionId=${encodeURIComponent(clasificacionId)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                mostrarNotificacion(data.message, 'success');
                
                // Cerrar el modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('modalCrearVehiculo'));
                modal.hide();
                
                // Limpiar el formulario
                document.getElementById('formCrearVehiculo').reset();
                
                // Recargar la página para mostrar el nuevo vehículo
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                mostrarNotificacion(data.error, 'error');
            }
        })
        .catch(error => {
            console.error('Error al crear vehículo:', error);
            mostrarNotificacion('Error al crear el vehículo', 'error');
        });
    }

    function mostrarNotificacion(mensaje, tipo = 'info') {
        const toast = document.createElement('div');
        toast.className = `alert alert-${tipo === 'success' ? 'success' : tipo === 'error' ? 'danger' : 'info'} alert-dismissible fade show position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            ${mensaje}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.body.appendChild(toast);
        
        // Auto-remove toast after 3 seconds
        setTimeout(() => {
            if (toast.parentNode) {
                toast.parentNode.removeChild(toast);
            }
        }, 3000);
    }

    function desvincularVehiculo(patente) {
        if (!confirm(`¿Estás seguro de que quieres desvincular el vehículo ${patente}?`)) {
            return;
        }

        fetch('/Conductor/DesvincularVehiculo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `patente=${encodeURIComponent(patente)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                
                // Si el vehículo desvinculado era el seleccionado, limpiar la selección
                if (vehiculoActual && vehiculoActual.patente === patente) {
                    vehiculoActual = null;
                    document.getElementById('sinVehiculoSeleccionado').style.display = 'block';
                    document.getElementById('detalleVehiculo').style.display = 'none';
                }
                
                // Limpiar sessionStorage si era el vehículo seleccionado
                const vehiculoSeleccionado = sessionStorage.getItem('vehiculoSeleccionado');
                if (vehiculoSeleccionado) {
                    const vehiculo = JSON.parse(vehiculoSeleccionado);
                    if (vehiculo.patente === patente) {
                        sessionStorage.removeItem('vehiculoSeleccionado');
                    }
                }
                
                // Recargar la página para actualizar la lista
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                mostrarNotificacion(data.error, 'error');
            }
        })
        .catch(error => {
            mostrarNotificacion('Error al desvincular el vehículo', 'error');
        });
    }

    // Preseleccionar vehículo al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        // Primero verificar sessionStorage para vehículo seleccionado
        const vehiculoSeleccionado = sessionStorage.getItem('vehiculoSeleccionado');
        if (vehiculoSeleccionado) {
            const vehiculo = JSON.parse(vehiculoSeleccionado);
            mostrarDetalleVehiculo(vehiculo);
            vehiculoActual = vehiculo;
            return;
        }
        
        // Si no hay vehículo seleccionado, usar el favorito del servidor
        const vehiculoFavorito = '@vehiculoFavorito';
        if (vehiculoFavorito && vehiculoFavorito !== '') {
            // Preseleccionar el vehículo favorito
            seleccionarVehiculo(vehiculoFavorito);
        }

    });
</script>
