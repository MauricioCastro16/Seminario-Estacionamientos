        // Renderizar lista en el panel
        function renderizarFavoritos() {
            const lista = document.getElementById('listaFavoritos');
            const mensajeVacio = document.getElementById('favoritosVacio');

            lista.innerHTML = '';

            if (!favoritos || favoritos.length === 0) {
                mensajeVacio.style.display = 'block';
                return;
            }

            mensajeVacio.style.display = 'none';

            favoritos.forEach(fav => {
                const li = document.createElement('li');
                li.classList.add('favorite-item');

                const mainBtn = document.createElement('button');
                mainBtn.type = 'button';
                mainBtn.className = 'favorite-main-btn';
                mainBtn.innerHTML = `
                    <span>${fav.apodo}</span>
                    <span>${fav.direccion || (fav.ciudad || '')}</span>
                `;
                mainBtn.onclick = function () {
                    irAFavorito(fav);
                };

                // Bot√≥n editar
                const editBtn = document.createElement('button');
                editBtn.type = 'button';
                editBtn.className = 'favorite-edit-btn';
                editBtn.innerHTML = '<i class="fa-solid fa-pen"></i>';
                editBtn.onclick = function (e) {
                    e.stopPropagation();
                    editarFavorito(fav);
                };

                // Bot√≥n eliminar
                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'favorite-remove-btn';
                removeBtn.innerHTML = '<i class="fa-solid fa-trash"></i>';
                removeBtn.onclick = function (e) {
                    e.stopPropagation();
                    eliminarFavorito(fav);
                };

                li.appendChild(mainBtn);
                li.appendChild(editBtn);
                li.appendChild(removeBtn);
                lista.appendChild(li);
            });
        }


        // Ir al favorito: centrar mapa y buscar playas cercanas
        function irAFavorito(fav) {
            const lat = fav.lat ?? fav.ubfLat ?? fav.UbfLat;
            const lon = fav.lon ?? fav.ubfLon ?? fav.UbfLon;

            if (lat === undefined || lon === undefined) {
                alert('Este favorito no tiene coordenadas guardadas.');
                return;
            }

            const latNum = parseFloat(lat);
            const lonNum = parseFloat(lon);
            if (isNaN(latNum) || isNaN(lonNum)) {
                alert('Las coordenadas de este favorito no son v√°lidas.');
                return;
            }

            // Centrar el mapa
            map.setView([latNum, lonNum], 16);

            $('#loading').show();

            // Buscar si la playa del favorito ya est√° cargada en memoria (por coordenadas)
            const playaCoincidente = playas.find(p =>
                p.plyLat && p.plyLon &&
                Math.abs(parseFloat(p.plyLat) - latNum) < 0.0001 &&
                Math.abs(parseFloat(p.plyLon) - lonNum) < 0.0001
            );

            if (playaCoincidente) {
                console.log('‚û°Ô∏è Playa encontrada localmente:', playaCoincidente.plyNom);
                $('#loading').hide();
                seleccionarPlaya(playaCoincidente); // ‚úÖ esto actualiza el footer
                return;
            }

            // Si no est√° en la lista, buscarla en el servidor
            $.get('/Conductor/GetPlayasCercanas', {
                lat: latNum,
                lon: lonNum,
                radioKm: 2
            })
            .done(function (data) {
                $('#loading').hide();

                if (data && data.length > 0) {
                    // Tomar la m√°s cercana y usar el flujo normal
                    const playa = data[0];
                    console.log('‚û°Ô∏è Playa encontrada por coordenadas:', playa.plyNom);
                    seleccionarPlaya(playa); // ‚úÖ usa el mismo flujo de detalle
                } else {
                    // No hay playas cercanas ‚Üí mostrar solo datos del favorito
                    $('#playaNombre').text(fav.apodo);
                    $('#estadoBadge').text('N/A').removeClass('open closed');
                    $('#disponibilidadTexto').text('Sin datos');
                    $('#disponibilidadBarra').css('width', '0%');
                    $('#tipoPiso').text('No disponible');
                    $('#direccion').text(fav.direccion || fav.ciudad || '');
                    $('#valorPromedio').text('N/A');
                    $('#horariosInfo').html('<span style="color:#dc3545;">Sin playas cercanas</span>');
                    $('#horariosSection').show();
                    $('#playaInfo').show();
                    $('#bottomMenu').addClass('show');
                }

                setTimeout(() => map.invalidateSize(), 200);
            })
            .fail(function (xhr, status, error) {
                $('#loading').hide();
                console.error('Error al cargar playas desde favorito:', error);
            });
        }




        // DELETE: eliminar favorito
        function eliminarFavorito(fav) {
            if (!confirm(`¬øEliminar "${fav.apodo}" de tus favoritos?`)) return;

            $.ajax({
                url: '@Url.Action("EliminarUbicacionFavorita", "Conductor")' + '?apodo=' + encodeURIComponent(fav.apodo),
                type: 'DELETE'
            })
            .done(function(data) {
                if (data.success) {
                    favoritos = favoritos.filter(f => f.apodo !== fav.apodo);
                    renderizarFavoritos();
                } else {
                    alert(data.error || 'No se pudo eliminar el favorito.');
                }
            })
            .fail(function(xhr, status, error) {
                console.error('Error al eliminar favorito:', error);
                alert('Ocurri√≥ un error al eliminar el favorito.');
            });
        }

        // EDIT: renombrar favorito
        function editarFavorito(fav) {
            const nuevoApodo = prompt('Nuevo nombre para esta ubicaci√≥n favorita:', fav.apodo);
            if (nuevoApodo === null) return; // cancel√≥
            if (nuevoApodo.trim() === '') {
                alert('El nombre no puede estar vac√≠o.');
                return;
            }

            fetch('@Url.Action("EditarUbicacionFavorita", "Conductor")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': antiforgeryToken
                },
                body: JSON.stringify({
                    apodoActual: fav.apodo,
                    nuevoApodo: nuevoApodo.trim()
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    fav.apodo = nuevoApodo.trim();
                    renderizarFavoritos();
                } else {
                    alert(data.error || 'No se pudo renombrar la ubicaci√≥n favorita.');
                }
            })
            .catch(err => {
                console.error('Error al renombrar favorito:', err);
                alert('Ocurri√≥ un error al renombrar la ubicaci√≥n favorita.');
            });
        }


