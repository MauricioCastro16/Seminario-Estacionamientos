        function buscarDireccion() {
            const direccion = $('#searchInput').val().trim();
            if (!direccion) {
                alert('Por favor ingresa una direcci√≥n');
                return;
            }

            // Mostrar bot√≥n de limpiar
            $('#clearBtn').addClass('show');

            // Usar geocoding para obtener coordenadas de la direcci√≥n
            const geocodingUrl = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(direccion + ', Resistencia, Chaco')}&limit=1`;
            
            $('#loading').show();
            
            $.get(geocodingUrl)
                .done(function(data) {
                    if (data && data.length > 0) {
                        const lat = parseFloat(data[0].lat);
                        const lon = parseFloat(data[0].lon);
                        
                        // Centrar el mapa en la direcci√≥n buscada
                        map.setView([lat, lon], 15);
                        
                        // Buscar playas cercanas a esa direcci√≥n
                        buscarPlayasCercanas(lat, lon);
                    } else {
                        alert('No se encontr√≥ la direcci√≥n. Intenta con una direcci√≥n m√°s espec√≠fica.');
                        $('#loading').hide();
                    }
                })
                .fail(function() {
                    alert('Error al buscar la direcci√≥n. Intenta nuevamente.');
                    $('#loading').hide();
                });
        }

        function buscarPlayasCercanas(lat, lon) {
            $.get('/Conductor/GetPlayasCercanas', {
                lat: lat,
                lon: lon,
                radioKm: 10 // Radio m√°s amplio para obtener m√°s opciones
            })
            .done(function(data) {
                console.log('Playas cercanas encontradas:', data);
                
                // Ordenar por distancia y tomar solo los 3 m√°s cercanos
                searchResults = data.sort((a, b) => a.distancia - b.distancia).slice(0, 3);
                
                // Agregar marcador de ubicaci√≥n buscada
                if (searchLocationMarker) {
                    map.removeLayer(searchLocationMarker);
                }
                
                searchLocationMarker = L.marker([lat, lon], {
                    icon: L.divIcon({
                        className: 'search-location-marker',
                        html: '<i class="fa-solid fa-location-dot" style="color: #dc3545; font-size: 24px; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></i>',
                        iconSize: [30, 30],
                        iconAnchor: [15, 15]
                    })
                }).addTo(map);
                
                searchLocationMarker.bindPopup('<b>Ubicaci√≥n buscada</b><br>Direcci√≥n: ' + $('#searchInput').val()).openPopup();
                
                isSearchMode = true;
                mostrarPlayasEnMapa();
                $('#loading').hide();
            })
            .fail(function(xhr, status, error) {
                console.error('Error al buscar playas cercanas:', error);
                $('#loading').hide();
            });
        }

        function volverAVistaNormal() {
            isSearchMode = false;
            searchResults = [];
            $('#searchInput').val('');
            $('#clearBtn').removeClass('show');
            
            // Remover marcador de ubicaci√≥n buscada
            if (searchLocationMarker) {
                map.removeLayer(searchLocationMarker);
                searchLocationMarker = null;
            }
            
            cargarPlayas(); // Recargar todas las playas
        }

        function limpiarBusqueda() {
            $('#searchInput').val('');
            $('#clearBtn').removeClass('show');
            volverAVistaNormal();
        }

        function inicializarEscalaPersonalizada() {
            // Actualizar escala cuando cambie el zoom
            map.on('zoomend', actualizarEscala);
            map.on('moveend', actualizarEscala);
            
            // Actualizar escala inicial
            actualizarEscala();
        }

        function actualizarEscala() {
            // Verificar que el mapa est√© inicializado
            if (!map || !map.getCenter) {
                return;
            }
            
            try {
                const center = map.getCenter();
                const zoom = map.getZoom();
                
                // Calcular la distancia en metros para 100 p√≠xeles
                const point1 = map.containerPointToLatLng([0, 0]);
                const point2 = map.containerPointToLatLng([100, 0]);
                const distance = point1.distanceTo(point2);
                
                // Determinar la mejor unidad y valor
                let scaleText, scaleWidth;
                
                if (distance >= 1000) {
                    // Usar kil√≥metros
                    const km = Math.round(distance / 1000);
                    scaleText = km + ' km';
                    scaleWidth = 100; // 100 p√≠xeles
                } else if (distance >= 100) {
                    // Usar metros
                    const m = Math.round(distance / 100) * 100;
                    scaleText = m + ' m';
                    scaleWidth = 100;
                } else if (distance >= 10) {
                    // Usar metros m√°s peque√±os
                    const m = Math.round(distance / 10) * 10;
                    scaleText = m + ' m';
                    scaleWidth = 100;
                } else {
                    // Usar metros muy peque√±os
                    const m = Math.round(distance);
                    scaleText = m + ' m';
                    scaleWidth = 100;
                }
                
                // Actualizar el texto y el ancho de la l√≠nea
                $('#scaleText').text(scaleText);
                $('#scaleLine').css('width', scaleWidth + 'px');
            } catch (error) {
                console.log('Escala no disponible a√∫n:', error);
                // Mostrar escala por defecto
                $('#scaleText').text('1 km');
                $('#scaleLine').css('width', '100px');
            }
        }

