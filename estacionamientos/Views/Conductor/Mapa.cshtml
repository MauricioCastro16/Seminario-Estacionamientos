        // GET: cargar ubicaciones favoritas del conductor
        function cargarUbicacionesFavoritas() {
            $.get('@Url.Action("GetUbicacionesFavoritas", "Conductor")')
                .done(function (data) {
                    console.log('Favoritos recibidos:', data);

                    if (data && !data.error) {
