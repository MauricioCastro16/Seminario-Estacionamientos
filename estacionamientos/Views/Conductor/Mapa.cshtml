        }

        /* Mobile: men煤 m谩s peque帽o y en l铆nea */
        @@media (max-width: 768px) {
            #bottomMenu {
                padding: 10px;
                height: auto;
                max-height: 120px;
            }

            .menu-header {
                margin-bottom: 8px;
            }

            .menu-header h4 {
