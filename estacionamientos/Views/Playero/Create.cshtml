@model estacionamientos.ViewModels.PlayeroCreateVM

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Playero.UsuNyA" class="form-label"></label>
        <input asp-for="Playero.UsuNyA" class="form-control" />
        <span asp-validation-for="Playero.UsuNyA" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Playero.UsuEmail" class="form-label"></label>
        <input asp-for="Playero.UsuEmail" class="form-control" />
        <span asp-validation-for="Playero.UsuEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Playero.UsuNumTel" class="form-label"></label>
        <input asp-for="Playero.UsuNumTel" class="form-control" />
        <span asp-validation-for="Playero.UsuNumTel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Playero.UsuPswd" class="form-label"></label>
        <input asp-for="Playero.UsuPswd" type="password" class="form-control" />
        <small class="form-text text-muted">Mínimo 8 caracteres.</small>
        <span asp-validation-for="Playero.UsuPswd" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Playa donde trabajará</label>
        <select asp-for="PlayaId" asp-items="ViewBag.Playas" class="form-select"></select>
        <span asp-validation-for="PlayaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear y asignar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
