@using estacionamientos.ViewModels
@model List<PlayeroIndexVM>

@{
    ViewData["Title"] = "Playeros";
}

<div class="container">
    <!-- Encabezado: título + botón Agregar a la derecha -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Playeros</h1>
        <a class="btn btn-primary"
           asp-controller="Playero"
           asp-action="Create"
           title="Agregar playero">
            <i class="bi bi-plus-lg me-1"></i> Agregar Playero
        </a>
    </div>


<div class="container">
    <h5 class="text-center mt-3">Mis Playeros</h5>

    <table class="table table-striped align-middle mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Playas asignadas</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @if (Model is { Count: > 0 })
        {
            foreach (var row in Model)
            {
                var p = row.Playero;
                <tr>
                    <td>@p.UsuNyA</td>
                    <td>
                        @if (row.Playas.Count == 0)
                        {
                            <span class="text-muted">Sin asignaciones</span>
                        }
                        else
                        {
                            foreach (var playa in row.Playas)
                            {
                                var etiqueta = !string.IsNullOrWhiteSpace(playa.PlyNom)
                                    ? playa.PlyNom
                                    : $"{playa.PlyCiu} - {playa.PlyDir}";

                                <form asp-controller="TrabajaEn"
                                      asp-action="DeleteDirect"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="plyID" value="@playa.PlyID" />
                                    <input type="hidden" name="plaNU" value="@p.UsuNU" />

                                    <span class="badge text-bg-secondary me-1 mb-1">
                                        @etiqueta
                                        <button type="submit"
                                                class="btn btn-sm btn-link text-danger p-0 ms-1"
                                                title="Desasignar"
                                                onclick="return confirm('¿Quitar esta asignación?');">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </span>
                                </form>
                            }
                        }
                    </td>
                    <td class="text-center">
                        <a class="btn btn-outline-info btn-sm me-2"
                           asp-controller="Playero"
                           asp-action="Details"
                           asp-route-id="@p.UsuNU"
                           title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>

                        <a class="btn btn-outline-primary btn-sm me-2"
                           asp-controller="Playero"
                           asp-action="Edit"
                           asp-route-id="@p.UsuNU"
                           title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a class="btn btn-outline-secondary btn-sm me-2"
                           asp-controller="TrabajaEn"
                           asp-action="NuevaAsignacion"
                           asp-route-plaNU="@p.UsuNU"
                           asp-route-returnUrl="@Url.Action("Index","Playero")"
                           title="Asignar a playa">
                            <i class="bi bi-link-45deg"></i>
                        </a>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    No tenés playeros asignados en tus playas.
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
